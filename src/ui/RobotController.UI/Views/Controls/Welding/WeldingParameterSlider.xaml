<UserControl x:Class="RobotController.UI.Views.Controls.Welding.WeldingParameterSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="400">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>

        <!-- Parameter Name -->
        <TextBlock Grid.Column="0" Text="{Binding Name}"
                  Foreground="#CCCCCC" FontWeight="SemiBold"
                  VerticalAlignment="Center"/>

        <!-- Slider -->
        <Slider Grid.Column="1"
               Minimum="{Binding MinValue}"
               Maximum="{Binding MaxValue}"
               Value="{Binding TargetValue, Mode=TwoWay}"
               VerticalAlignment="Center"
               Margin="8,0"
               IsEnabled="{Binding IsReadOnly, Converter={StaticResource InverseBool}}"/>

        <!-- Value Display -->
        <Border Grid.Column="2"
               Background="{Binding IsHighlighted, Converter={StaticResource BoolToColor}, ConverterParameter=#663300|#353535}"
               CornerRadius="4" Padding="8,4">
            <TextBlock Text="{Binding ValueDisplay}"
                      Foreground="White" FontFamily="Consolas"
                      FontWeight="Bold" TextAlignment="Right"/>
        </Border>

        <!-- +/- Buttons -->
        <StackPanel Grid.Column="3" Orientation="Horizontal"
                   VerticalAlignment="Center" HorizontalAlignment="Right">
            <Button Content="-" Width="24" Height="24"
                   Command="{Binding DecreaseCommand}"
                   Background="#404040" Foreground="White"
                   Margin="2,0"/>
            <Button Content="+" Width="24" Height="24"
                   Command="{Binding IncreaseCommand}"
                   Background="#404040" Foreground="White"
                   Margin="2,0"/>
        </StackPanel>
    </Grid>
</UserControl>
