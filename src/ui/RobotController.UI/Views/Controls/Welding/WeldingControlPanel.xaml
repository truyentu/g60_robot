<UserControl x:Class="RobotController.UI.Views.Controls.Welding.WeldingControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RobotController.UI.Views.Controls.Welding"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid Background="#E0E0E0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#C8C8C8" Padding="16,12">
            <Grid>
                <TextBlock Text="WELDING CONTROL"
                          FontSize="18" FontWeight="Bold"
                          Foreground="#333333"/>
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Ellipse Width="12" Height="12" Margin="8,0"
                            Fill="{Binding IsConnected, Converter={StaticResource BoolToColor}, ConverterParameter=#00FF00|#FF0000}"/>
                    <TextBlock Text="{Binding IsConnected, Converter={StaticResource BoolToText}, ConverterParameter=Connected|Disconnected}"
                              Foreground="#888888"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- State Display -->
            <local:WeldingStateDisplay Grid.Column="0" Grid.Row="0"
                                       DataContext="{Binding State}"
                                       Margin="0,0,8,8"/>

            <!-- Live Feedback -->
            <local:WeldingFeedbackPanel Grid.Column="1" Grid.Row="0"
                                        DataContext="{Binding Feedback}"
                                        Margin="8,0,8,8"/>

            <!-- Weave Preview -->
            <local:WeavePreviewPanel Grid.Column="2" Grid.Row="0"
                                     DataContext="{Binding WeavePreview}"
                                     Margin="8,0,0,8"/>

            <!-- Parameter Controls -->
            <Border Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1"
                   Background="#D0D0D0" CornerRadius="8" Padding="16">
                <StackPanel>
                    <TextBlock Text="PARAMETER CONTROL"
                              FontSize="12" FontWeight="Bold"
                              Foreground="#888888" Margin="0,0,0,12"/>

                    <!-- Parameters List -->
                    <ItemsControl ItemsSource="{Binding Parameters}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <local:WeldingParameterSlider Margin="0,4"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Synergic Mode -->
                    <Border Background="#C8C8C8" CornerRadius="4" Padding="12" Margin="0,12,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox Grid.Column="0" Content="Synergic Mode"
                                     IsChecked="{Binding Job.SynergicMode}"
                                     Foreground="#333333" Margin="0,0,16,0"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="Program:" Foreground="#888888"
                                          VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBox Text="{Binding Job.SynergicProgram}"
                                        Width="60" Background="#B8B8B8"
                                        Foreground="#333333" Padding="4"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer - Control Buttons -->
        <Border Grid.Row="2" Background="#C8C8C8" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Main Control Buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="START WELD"
                           Command="{Binding StartWeldCommand}"
                           Width="120" Height="40" Margin="0,0,8,0"
                           Background="#006600" Foreground="White"
                           FontWeight="Bold"/>

                    <Button Content="STOP"
                           Command="{Binding StopWeldCommand}"
                           Width="80" Height="40" Margin="0,0,8,0"
                           Background="#666600" Foreground="White"
                           FontWeight="Bold"/>

                    <Button Content="E-STOP"
                           Command="{Binding AbortWeldCommand}"
                           Width="80" Height="40" Margin="0,0,8,0"
                           Background="#660000" Foreground="White"
                           FontWeight="Bold"/>

                    <Button Content="RESET"
                           Command="{Binding ResetFaultCommand}"
                           Width="80" Height="40"
                           Background="#B8B8B8" Foreground="#333333"
                           Visibility="{Binding State.HasFault, Converter={StaticResource BoolToVisibility}}"/>
                </StackPanel>

                <!-- Job Info -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Job:" Foreground="#888888"
                              VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox ItemsSource="{Binding Job.SavedJobs}"
                             SelectedItem="{Binding Job.SelectedJob}"
                             Width="150" Background="#B8B8B8"
                             Foreground="#333333"/>

                    <Button Content="SAVE" Width="60" Height="30"
                           Command="{Binding Job.SaveJobCommand}"
                           Background="#B8B8B8" Foreground="#333333"
                           Margin="8,0,0,0"/>

                    <Button Content="NEW" Width="60" Height="30"
                           Command="{Binding Job.NewJobCommand}"
                           Background="#B8B8B8" Foreground="#333333"
                           Margin="4,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
