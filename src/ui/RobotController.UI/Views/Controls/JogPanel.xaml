<UserControl x:Class="RobotController.UI.Views.Controls.JogPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="300">

    <UserControl.Resources>
        <!-- Jog Button Style -->
        <Style x:Key="JogButtonStyle" TargetType="RepeatButton">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#B8B8B8"/>
            <Setter Property="Foreground" Value="#222222"/>
            <Setter Property="BorderBrush" Value="#999999"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Delay" Value="200"/>
            <Setter Property="Interval" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#00AA00"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A8A8A8"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#C8C8C8"/>
                    <Setter Property="Foreground" Value="#999999"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Joint Button Style -->
        <Style x:Key="JointSelectStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="#C8C8C8"/>
            <Setter Property="Foreground" Value="#222222"/>
            <Setter Property="BorderBrush" Value="#999999"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#0078D7"/>
                    <Setter Property="BorderBrush" Value="#00A0FF"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#00A0FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="#C8C8C8" CornerRadius="8" Padding="12">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="JOG CONTROL"
                       FontSize="14" FontWeight="Bold"
                       Foreground="#555555"
                       Margin="0,0,0,12"/>

            <!-- Mode Toggle -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <RadioButton Content="Joint"
                           IsChecked="{Binding JogJointMode}"
                           GroupName="JogMode"
                           Foreground="#333333" Margin="0,0,16,0"/>
                <RadioButton Content="Cartesian"
                           GroupName="JogMode"
                           Foreground="#333333"/>
            </StackPanel>

            <!-- Joint Selection (visible in Joint mode) -->
            <StackPanel Visibility="{Binding JogJointMode, Converter={StaticResource BoolToVisibility}}">
                <TextBlock Text="Select Joint:" Foreground="#555555" Margin="0,0,0,4"/>
                <WrapPanel Margin="0,0,0,12">
                    <ToggleButton Content="J1" Style="{StaticResource JointSelectStyle}"
                                IsChecked="{Binding Joints[0].IsSelected}"
                                Command="{Binding SelectJointCommand}" CommandParameter="0"/>
                    <ToggleButton Content="J2" Style="{StaticResource JointSelectStyle}"
                                IsChecked="{Binding Joints[1].IsSelected}"
                                Command="{Binding SelectJointCommand}" CommandParameter="1"/>
                    <ToggleButton Content="J3" Style="{StaticResource JointSelectStyle}"
                                IsChecked="{Binding Joints[2].IsSelected}"
                                Command="{Binding SelectJointCommand}" CommandParameter="2"/>
                    <ToggleButton Content="J4" Style="{StaticResource JointSelectStyle}"
                                IsChecked="{Binding Joints[3].IsSelected}"
                                Command="{Binding SelectJointCommand}" CommandParameter="3"/>
                    <ToggleButton Content="J5" Style="{StaticResource JointSelectStyle}"
                                IsChecked="{Binding Joints[4].IsSelected}"
                                Command="{Binding SelectJointCommand}" CommandParameter="4"/>
                    <ToggleButton Content="J6" Style="{StaticResource JointSelectStyle}"
                                IsChecked="{Binding Joints[5].IsSelected}"
                                Command="{Binding SelectJointCommand}" CommandParameter="5"/>
                </WrapPanel>
            </StackPanel>

            <!-- Cartesian Axis Selection (visible in Cartesian mode) -->
            <StackPanel>
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding JogJointMode}" Value="False">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>

                <TextBlock Text="Select Axis:" Foreground="#555555" Margin="0,0,0,4"/>

                <!-- Coordinate System -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Frame:" Foreground="#555555" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox ItemsSource="{Binding CoordinateSystems}"
                              SelectedItem="{Binding CoordinateSystem}"
                              Width="100"/>
                </StackPanel>

                <!-- Linear Axes -->
                <TextBlock Text="Linear (mm):" Foreground="#555555" Margin="0,0,0,4"/>
                <WrapPanel Margin="0,0,0,8">
                    <ToggleButton Content="X" Style="{StaticResource JointSelectStyle}"
                                  Foreground="Red"
                                  IsChecked="{Binding CartesianAxes[0].IsSelected}"
                                  Command="{Binding SelectCartesianAxisCommand}" CommandParameter="0"/>
                    <ToggleButton Content="Y" Style="{StaticResource JointSelectStyle}"
                                  Foreground="LimeGreen"
                                  IsChecked="{Binding CartesianAxes[1].IsSelected}"
                                  Command="{Binding SelectCartesianAxisCommand}" CommandParameter="1"/>
                    <ToggleButton Content="Z" Style="{StaticResource JointSelectStyle}"
                                  Foreground="DodgerBlue"
                                  IsChecked="{Binding CartesianAxes[2].IsSelected}"
                                  Command="{Binding SelectCartesianAxisCommand}" CommandParameter="2"/>
                </WrapPanel>

                <!-- Rotational Axes -->
                <TextBlock Text="Rotational (deg):" Foreground="#555555" Margin="0,0,0,4"/>
                <WrapPanel Margin="0,0,0,12">
                    <ToggleButton Content="Rx" Style="{StaticResource JointSelectStyle}"
                                  IsChecked="{Binding CartesianAxes[3].IsSelected}"
                                  Command="{Binding SelectCartesianAxisCommand}" CommandParameter="3"/>
                    <ToggleButton Content="Ry" Style="{StaticResource JointSelectStyle}"
                                  IsChecked="{Binding CartesianAxes[4].IsSelected}"
                                  Command="{Binding SelectCartesianAxisCommand}" CommandParameter="4"/>
                    <ToggleButton Content="Rz" Style="{StaticResource JointSelectStyle}"
                                  IsChecked="{Binding CartesianAxes[5].IsSelected}"
                                  Command="{Binding SelectCartesianAxisCommand}" CommandParameter="5"/>
                </WrapPanel>
            </StackPanel>

            <!-- Jog Buttons -->
            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <RepeatButton Grid.Column="1" Content="−"
                            Style="{StaticResource JogButtonStyle}"
                            PreviewMouseDown="JogMinus_MouseDown"
                            PreviewMouseUp="Jog_MouseUp"
                            IsEnabled="{Binding IsHomed}"/>

                <RepeatButton Grid.Column="2" Content="+"
                            Style="{StaticResource JogButtonStyle}"
                            PreviewMouseDown="JogPlus_MouseDown"
                            PreviewMouseUp="Jog_MouseUp"
                            IsEnabled="{Binding IsHomed}"
                            Margin="8,0,0,0"/>
            </Grid>

            <!-- Jog Mode -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <RadioButton Content="Continuous"
                           IsChecked="{Binding JogContinuous}"
                           GroupName="JogType"
                           Foreground="#333333" Margin="0,0,16,0"/>
                <RadioButton Content="Increment"
                           GroupName="JogType"
                           Foreground="#333333"/>
            </StackPanel>

            <!-- Increment Selection -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="Increment:" Foreground="#555555"
                          VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox ItemsSource="{Binding JogIncrements}"
                         SelectedItem="{Binding JogIncrement}"
                         Width="80"/>
                <TextBlock Text="°" Foreground="#555555"
                          VerticalAlignment="Center" Margin="4,0,0,0"/>
            </StackPanel>

            <!-- Speed Slider -->
            <TextBlock Text="Jog Speed:" Foreground="#555555" Margin="0,0,0,4"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Slider Grid.Column="0"
                       Value="{Binding JogSpeed}"
                       Minimum="1" Maximum="100"
                       TickFrequency="10"
                       IsSnapToTickEnabled="False"/>
                <TextBlock Grid.Column="1"
                          Text="{Binding JogSpeed, StringFormat={}{0:F0}%}"
                          Foreground="#222222"
                          TextAlignment="Right"
                          VerticalAlignment="Center"/>
            </Grid>

            <!-- Keyboard Hint -->
            <Border Background="#B8B8B8" CornerRadius="4"
                   Padding="8" Margin="0,16,0,0">
                <StackPanel>
                    <TextBlock Text="Keyboard Shortcuts:"
                              FontWeight="Bold" Foreground="#555555"/>
                    <TextBlock Text="1-6: Select joint" Foreground="#555555"/>
                    <TextBlock Text="Left/Right: Jog axis" Foreground="#555555"/>
                    <TextBlock Text="Space: Pause/Resume" Foreground="#555555"/>
                    <TextBlock Text="Esc: Stop" Foreground="#555555"/>
                    <TextBlock Text="+/-: Feed override" Foreground="#555555"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
