<UserControl x:Class="RobotController.UI.Views.Controls.ToolPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{StaticResource SecondaryBackground}">

    <UserControl.Resources>
        <!-- Tool list item style -->
        <Style x:Key="ToolListItem" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PrimaryBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <SolidColorBrush x:Key="ActiveToolColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="CalibrationColor" Color="#FF9800"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Tool List -->
        <Border Grid.Column="0" Background="{StaticResource PrimaryBackground}"
                Margin="0,0,10,0" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="Tools" FontSize="16" FontWeight="Bold"
                               Foreground="{StaticResource ForegroundBrush}"/>
                    <TextBlock Foreground="Gray" FontSize="11" Margin="0,5,0,0">
                        <Run Text="Active: "/>
                        <Run Text="{Binding ActiveTool.Name, FallbackValue='None'}"/>
                    </TextBlock>
                </StackPanel>

                <!-- Tool List -->
                <ListBox Grid.Row="1" ItemsSource="{Binding Tools}"
                         SelectedItem="{Binding SelectedTool}"
                         Background="Transparent" BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource ToolListItem}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                                   Foreground="{StaticResource ForegroundBrush}"/>
                                        <TextBlock Text="{Binding Description}" FontSize="11"
                                                   Foreground="Gray" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock FontSize="10" Foreground="Gray" Margin="0,3,0,0">
                                            <Run Text="TCP: Z="/>
                                            <Run Text="{Binding TcpZ, StringFormat=F1}"/>
                                            <Run Text="mm"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Active indicator -->
                                    <Border Grid.Column="1" Background="{StaticResource ActiveToolColor}"
                                            CornerRadius="3" Padding="8,3" VerticalAlignment="Center"
                                            Visibility="{Binding IsActive, Converter={StaticResource BoolToVisibility}}">
                                        <TextBlock Text="ACTIVE" Foreground="White" FontSize="10" FontWeight="Bold"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="New" Command="{Binding StartCreateToolCommand}"
                            Padding="15,5" Margin="0,0,5,0"/>
                    <Button Content="Edit" Command="{Binding StartEditToolCommand}"
                            IsEnabled="{Binding SelectedTool, Converter={StaticResource NotNullToBool}}"
                            Padding="15,5" Margin="0,0,5,0"/>
                    <Button Content="Delete" Command="{Binding DeleteToolCommand}"
                            IsEnabled="{Binding SelectedTool, Converter={StaticResource NotNullToBool}}"
                            Padding="15,5" Margin="0,0,5,0"/>
                    <Button Content="Set Active" Command="{Binding SelectToolCommand}"
                            CommandParameter="{Binding SelectedTool}"
                            IsEnabled="{Binding SelectedTool, Converter={StaticResource NotNullToBool}}"
                            Background="{StaticResource AccentBrush}" Foreground="White"
                            Padding="15,5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Right Panel: Tool Details / Editor / Calibration -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Tool Editor -->
            <Border Grid.Row="0" Background="{StaticResource PrimaryBackground}" Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Tool Details" FontSize="16" FontWeight="Bold"
                                   Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,15"/>

                        <!-- ID (readonly when editing) -->
                        <TextBlock Text="Tool ID" Foreground="Gray" FontSize="11"/>
                        <TextBox Text="{Binding EditId, UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="{Binding IsCreatingNew}"
                                 Margin="0,3,0,10"/>

                        <!-- Name -->
                        <TextBlock Text="Name" Foreground="Gray" FontSize="11"/>
                        <TextBox Text="{Binding EditName, UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="{Binding IsEditing}"
                                 Margin="0,3,0,10"/>

                        <!-- Description -->
                        <TextBlock Text="Description" Foreground="Gray" FontSize="11"/>
                        <TextBox Text="{Binding EditDescription, UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="{Binding IsEditing}"
                                 Margin="0,3,0,15"/>

                        <!-- TCP Position -->
                        <TextBlock Text="TCP Position (mm)" FontWeight="SemiBold"
                                   Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,10,10">
                                <TextBlock Text="X" Foreground="Gray" FontSize="11"/>
                                <TextBox Text="{Binding EditTcpX, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding IsEditing}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,10,10">
                                <TextBlock Text="Y" Foreground="Gray" FontSize="11"/>
                                <TextBox Text="{Binding EditTcpY, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding IsEditing}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,0,0,10">
                                <TextBlock Text="Z" Foreground="Gray" FontSize="11"/>
                                <TextBox Text="{Binding EditTcpZ, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding IsEditing}"/>
                            </StackPanel>
                        </Grid>

                        <!-- TCP Rotation -->
                        <TextBlock Text="TCP Rotation (degrees)" FontWeight="SemiBold"
                                   Foreground="{StaticResource ForegroundBrush}" Margin="0,5,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,10">
                                <TextBlock Text="Rx" Foreground="Gray" FontSize="11"/>
                                <TextBox Text="{Binding EditTcpRx, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding IsEditing}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0,0,10,10">
                                <TextBlock Text="Ry" Foreground="Gray" FontSize="11"/>
                                <TextBox Text="{Binding EditTcpRy, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding IsEditing}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Margin="0,0,0,10">
                                <TextBlock Text="Rz" Foreground="Gray" FontSize="11"/>
                                <TextBox Text="{Binding EditTcpRz, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding IsEditing}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Mass -->
                        <TextBlock Text="Tool Mass (kg)" FontWeight="SemiBold"
                                   Foreground="{StaticResource ForegroundBrush}" Margin="0,5,0,10"/>
                        <TextBox Text="{Binding EditMass, UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="{Binding IsEditing}" Width="100" HorizontalAlignment="Left"/>

                        <!-- Save/Cancel buttons -->
                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0"
                                    Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibility}}">
                            <Button Content="Save" Command="{Binding SaveToolCommand}"
                                    Background="{StaticResource AccentBrush}" Foreground="White"
                                    Padding="20,8" Margin="0,0,10,0"/>
                            <Button Content="Cancel" Command="{Binding CancelEditCommand}"
                                    Padding="20,8"/>
                        </StackPanel>

                        <!-- Error message -->
                        <Border Background="#F44336" CornerRadius="4" Padding="10" Margin="0,15,0,0"
                                Visibility="{Binding HasError, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock Text="{Binding ErrorMessage}" Foreground="White" TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Calibration Panel -->
            <Border Grid.Row="1" Background="{StaticResource PrimaryBackground}"
                    Padding="15" Margin="0,10,0,0">
                <StackPanel>
                    <TextBlock Text="TCP Calibration" FontSize="14" FontWeight="Bold"
                               Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Method selection -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Method:" Foreground="{StaticResource ForegroundBrush}"
                                       VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox ItemsSource="{Binding AvailableCalibrationMethods}"
                                      SelectedItem="{Binding CalibrationMethod}"
                                      Width="120" IsEnabled="{Binding IsCalibrating, Converter={StaticResource InverseBool}}"/>
                        </StackPanel>

                        <!-- Progress -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center"
                                    Margin="20,0" Visibility="{Binding IsCalibrating, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock Foreground="{StaticResource ForegroundBrush}">
                                <Run Text="Points: "/>
                                <Run Text="{Binding CalibrationPointsRecorded}"/>
                                <Run Text="/"/>
                                <Run Text="{Binding CalibrationPointsRequired}"/>
                            </TextBlock>
                            <ProgressBar Value="{Binding CalibrationPointsRecorded}"
                                         Maximum="{Binding CalibrationPointsRequired}"
                                         Width="100" Height="8" Margin="15,0,0,0"/>
                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <!-- Start button -->
                            <Button Content="Start Calibration" Command="{Binding StartCalibrationCommand}"
                                    Visibility="{Binding IsCalibrating, Converter={StaticResource InverseBoolToVisibility}}"
                                    Background="{StaticResource CalibrationColor}" Foreground="White"
                                    Padding="15,8"/>

                            <!-- Calibrating buttons -->
                            <StackPanel Orientation="Horizontal"
                                        Visibility="{Binding IsCalibrating, Converter={StaticResource BoolToVisibility}}">
                                <Button Content="Record Point" Command="{Binding RecordCalibrationPointCommand}"
                                        Background="{StaticResource AccentBrush}" Foreground="White"
                                        Padding="15,8" Margin="0,0,5,0"/>
                                <Button Content="Calculate" Command="{Binding FinishCalibrationCommand}"
                                        Background="{StaticResource ActiveToolColor}" Foreground="White"
                                        Padding="15,8" Margin="0,0,5,0"/>
                                <Button Content="Cancel" Command="{Binding CancelCalibrationCommand}"
                                        Padding="15,8"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Loading overlay -->
        <Border Grid.ColumnSpan="2" Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Loading..." Foreground="White" FontSize="16"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
