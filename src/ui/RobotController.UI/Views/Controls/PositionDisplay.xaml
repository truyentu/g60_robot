<UserControl x:Class="RobotController.UI.Views.Controls.PositionDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="280" d:DesignWidth="280">

    <UserControl.Resources>
        <!-- Mode Button Style -->
        <Style x:Key="ModeButtonStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Background="#353535"
                                BorderBrush="#454545"
                                BorderThickness="1"
                                CornerRadius="3"
                                Padding="10,4"
                                Cursor="Hand">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0078D7"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#0078D7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <!-- Position Row Style -->
        <Style x:Key="PositionRowStyle" TargetType="Border">
            <Setter Property="Background" Value="#353535"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,1"/>
        </Style>
    </UserControl.Resources>

    <Border Background="#2D2D2D" CornerRadius="8" Padding="12">
        <StackPanel>
            <!-- Header with mode buttons -->
            <Grid Margin="0,0,0,8">
                <TextBlock Text="POSITION" FontSize="12" FontWeight="Bold"
                          Foreground="#AAAAAA" VerticalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <RadioButton Content="Joint"
                                 Style="{StaticResource ModeButtonStyle}"
                                 IsChecked="{Binding IsJointMode, Mode=OneWay}"
                                 Command="{Binding SetJointModeCommand}"
                                 Margin="0,0,2,0"/>
                    <RadioButton Content="World"
                                 Style="{StaticResource ModeButtonStyle}"
                                 IsChecked="{Binding IsWorldMode, Mode=OneWay}"
                                 Command="{Binding SetWorldModeCommand}"
                                 Margin="0,0,2,0"/>
                    <RadioButton Content="Base"
                                 Style="{StaticResource ModeButtonStyle}"
                                 IsChecked="{Binding IsBaseMode, Mode=OneWay}"
                                 Command="{Binding SetBaseModeCommand}"/>
                </StackPanel>
            </Grid>

            <!-- Active frame info -->
            <Border Background="#252525" CornerRadius="3" Padding="6,3" Margin="0,0,0,8">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Base: " Foreground="#666666" FontSize="10"/>
                    <TextBlock Text="{Binding ActiveBaseId}" Foreground="#AAAAAA" FontSize="10" Margin="0,0,12,0"/>
                    <TextBlock Text="Tool: " Foreground="#666666" FontSize="10"/>
                    <TextBlock Text="{Binding ActiveToolId}" Foreground="#AAAAAA" FontSize="10"/>
                </StackPanel>
            </Border>

            <!-- Position values grid -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left column: Axis 1-3 -->
                <StackPanel Grid.Column="0" Margin="0,0,4,0">
                    <Border Style="{StaticResource PositionRowStyle}">
                        <Grid>
                            <TextBlock Text="{Binding Label1}" Foreground="#0078D7" FontWeight="Bold" Width="28"/>
                            <TextBlock Text="{Binding Position1, StringFormat='{}{0:F3}'}"
                                      Foreground="White" FontFamily="Consolas" FontSize="12"
                                      HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                    <Border Style="{StaticResource PositionRowStyle}">
                        <Grid>
                            <TextBlock Text="{Binding Label2}" Foreground="#00AA00" FontWeight="Bold" Width="28"/>
                            <TextBlock Text="{Binding Position2, StringFormat='{}{0:F3}'}"
                                      Foreground="White" FontFamily="Consolas" FontSize="12"
                                      HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                    <Border Style="{StaticResource PositionRowStyle}">
                        <Grid>
                            <TextBlock Text="{Binding Label3}" Foreground="#CC0000" FontWeight="Bold" Width="28"/>
                            <TextBlock Text="{Binding Position3, StringFormat='{}{0:F3}'}"
                                      Foreground="White" FontFamily="Consolas" FontSize="12"
                                      HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Right column: Axis 4-6 -->
                <StackPanel Grid.Column="1" Margin="4,0,0,0">
                    <Border Style="{StaticResource PositionRowStyle}">
                        <Grid>
                            <TextBlock Text="{Binding Label4}" Foreground="#888888" FontWeight="Bold" Width="28"/>
                            <TextBlock Text="{Binding Position4, StringFormat='{}{0:F3}'}"
                                      Foreground="White" FontFamily="Consolas" FontSize="12"
                                      HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                    <Border Style="{StaticResource PositionRowStyle}">
                        <Grid>
                            <TextBlock Text="{Binding Label5}" Foreground="#888888" FontWeight="Bold" Width="28"/>
                            <TextBlock Text="{Binding Position5, StringFormat='{}{0:F3}'}"
                                      Foreground="White" FontFamily="Consolas" FontSize="12"
                                      HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                    <Border Style="{StaticResource PositionRowStyle}">
                        <Grid>
                            <TextBlock Text="{Binding Label6}" Foreground="#888888" FontWeight="Bold" Width="28"/>
                            <TextBlock Text="{Binding Position6, StringFormat='{}{0:F3}'}"
                                      Foreground="White" FontFamily="Consolas" FontSize="12"
                                      HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Unit indicator -->
            <TextBlock Text="{Binding Unit}" Foreground="#666666" FontSize="10"
                      HorizontalAlignment="Right" Margin="0,4,0,0"/>
        </StackPanel>
    </Border>
</UserControl>
