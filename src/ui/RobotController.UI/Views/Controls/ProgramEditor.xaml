<UserControl x:Class="RobotController.UI.Views.Controls.ProgramEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:editor="clr-namespace:RobotController.UI.Editor"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#C8C8C8" Padding="8">
            <StackPanel Orientation="Horizontal">
                <Button Content="Open" Command="{Binding OpenFileCommand}"
                        Margin="2" Padding="12,6"
                        Background="#0E639C" Foreground="White"
                        BorderThickness="0" Cursor="Hand"
                        ToolTip="Open RPL program file"/>
                <Button Content="Save" Command="{Binding SaveFileCommand}"
                        Margin="2" Padding="12,6"
                        Background="#0E639C" Foreground="White"
                        BorderThickness="0" Cursor="Hand"
                        ToolTip="Save program file"/>

                <Separator Margin="15,0" Width="1" Background="#999999"/>

                <Button Content="Run" Command="{Binding RunProgramCommand}"
                        Margin="2" Padding="12,6"
                        Background="#4CAF50" Foreground="White"
                        BorderThickness="0" Cursor="Hand"/>
                <Button Content="Pause" Command="{Binding PauseProgramCommand}"
                        Margin="2" Padding="12,6"
                        Background="#FF9800" Foreground="White"
                        BorderThickness="0" Cursor="Hand"/>
                <Button Content="Stop" Command="{Binding StopProgramCommand}"
                        Margin="2" Padding="12,6"
                        Background="#F44336" Foreground="White"
                        BorderThickness="0" Cursor="Hand"/>
                <Button Content="Step" Command="{Binding StepProgramCommand}"
                        Margin="2" Padding="12,6"
                        Background="#B8B8B8" Foreground="#222222"
                        BorderThickness="0" Cursor="Hand"
                        ToolTip="Execute one statement forward"/>
                <Button Content="Step Back" Command="{Binding BackwardStepCommand}"
                        Margin="2" Padding="12,6"
                        Background="#7B1FA2" Foreground="White"
                        BorderThickness="0" Cursor="Hand"
                        ToolTip="Undo last executed statement (BWD)"/>
                <Button Content="Reset" Command="{Binding ResetProgramCommand}"
                        Margin="2" Padding="12,6"
                        Background="#B8B8B8" Foreground="#222222"
                        BorderThickness="0" Cursor="Hand"/>

                <Separator Margin="15,0" Width="1" Background="#999999"/>

                <!-- Block Select: Jump to caret line -->
                <Button Content="Block Sel" Command="{Binding BlockSelectCommand}"
                        Margin="2" Padding="12,6"
                        Background="#0277BD" Foreground="White"
                        BorderThickness="0" Cursor="Hand"
                        ToolTip="Jump execution to current caret line (Satzanwahl)"/>

                <Separator Margin="15,0" Width="1" Background="#999999"/>

                <!-- Touch-Up: Modify Position Button -->
                <Button Content="Modify Pos" Command="{Binding ModifyPositionCommand}"
                        Margin="2" Padding="12,6"
                        Background="#9C27B0" Foreground="White"
                        BorderThickness="0" Cursor="Hand"
                        ToolTip="Update selected target with current robot position (Touch-Up)"/>

                <Separator Margin="15,0" Width="1" Background="#999999"/>

                <TextBlock Text="Override:" VerticalAlignment="Center" Foreground="#555555" Margin="0,0,8,0"/>
                <Slider Minimum="1" Maximum="100" Value="{Binding OverridePercent}"
                        Width="120" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding OverridePercent, StringFormat={}{0}%}"
                           VerticalAlignment="Center" Foreground="#222222" Width="40" Margin="5,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Code Editor -->
        <Border Grid.Row="1" Grid.Column="0" Background="#2A2A2A" BorderThickness="0">
            <Grid>
                <avalon:TextEditor x:Name="CodeEditor"
                                   FontFamily="Consolas"
                                   FontSize="14"
                                   ShowLineNumbers="True"
                                   Background="#2A2A2A"
                                   Foreground="#D4D4D4"
                                   LineNumbersForeground="#858585"
                                   HorizontalScrollBarVisibility="Auto"
                                   VerticalScrollBarVisibility="Auto"/>

                <!-- KUKA-Style Inline Command Editor Popup -->
                <Popup x:Name="InlineFormPopup"
                       PlacementTarget="{Binding ElementName=CodeEditor}"
                       Placement="Relative"
                       StaysOpen="True"
                       AllowsTransparency="True"
                       PopupAnimation="Fade">
                    <editor:InlineCommandEditor x:Name="InlineEditor" Width="580"/>
                </Popup>

                <!-- Task C: Floating Touch-Up Button (appears on motion lines) -->
                <Popup x:Name="TouchUpButtonPopup"
                       PlacementTarget="{Binding ElementName=CodeEditor}"
                       Placement="Relative"
                       StaysOpen="True"
                       AllowsTransparency="True"
                       PopupAnimation="None">
                    <Button x:Name="FloatingTouchUpBtn"
                            Content="&#xE7C8;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="14"
                            Width="28" Height="28"
                            Background="#9C27B0" Foreground="White"
                            BorderThickness="0" Cursor="Hand"
                            ToolTip="Touch-Up: Update position with current robot TCP"
                            Command="{Binding ModifyPositionCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="14"
                                        Padding="4">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="6" ShadowDepth="1" Opacity="0.4"/>
                                    </Border.Effect>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Popup>

                <!-- Toast Notification Overlay -->
                <Border x:Name="ToastOverlay"
                        VerticalAlignment="Top" HorizontalAlignment="Right"
                        Margin="0,10,20,0"
                        CornerRadius="6"
                        Padding="14,8"
                        MaxWidth="400"
                        Visibility="{Binding IsToastVisible, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#2E7D32"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ToastType}" Value="error">
                                    <Setter Property="Background" Value="#C62828"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="12" ShadowDepth="3" Opacity="0.5"/>
                    </Border.Effect>
                    <TextBlock Text="{Binding ToastMessage}"
                               Foreground="White" FontSize="12"
                               FontFamily="Consolas"
                               TextWrapping="Wrap"/>
                </Border>
            </Grid>
        </Border>

        <!-- Point Database + Touch-Up Panel -->
        <Border Grid.Row="1" Grid.Column="1" Background="#D0D0D0">
            <DockPanel>
                <Border DockPanel.Dock="Top" Background="#C8C8C8" Padding="10,8">
                    <TextBlock Text="POINTS" FontWeight="SemiBold" Foreground="#555555" FontSize="11"/>
                </Border>

                <!-- Touch-Up Info Panel -->
                <Border DockPanel.Dock="Top" Background="#B8D4E8" Padding="8,6"
                        Visibility="{Binding IsOnMotionLine, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
                    <StackPanel>
                        <TextBlock FontSize="10" Foreground="#333333">
                            <Run Text="Target: "/>
                            <Run Text="{Binding CaretTargetName}" Foreground="#8B4513" FontWeight="SemiBold"/>
                        </TextBlock>
                        <TextBlock Text="{Binding TouchUpStatus}" FontSize="10" Foreground="#2E7D32"
                                   Margin="0,2,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <StackPanel DockPanel.Dock="Bottom" Margin="8">
                    <Button Content="Teach &amp; Insert" Command="{Binding TeachAndInsertCommand}"
                            Padding="8,6" Margin="0,0,0,4"
                            Background="#4CAF50" Foreground="White"
                            BorderThickness="0" Cursor="Hand"
                            ToolTip="Teach current position and insert code at caret"/>
                    <Button Content="Refresh" Command="{Binding RefreshPointsCommand}"
                            Padding="8,6"
                            Background="#B8B8B8" Foreground="#222222"
                            BorderThickness="0" Cursor="Hand"/>
                </StackPanel>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Points}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#C8C8C8" CornerRadius="4" Padding="10,8" Margin="6,3">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                                   Foreground="#1A7A6D" FontSize="13"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Foreground="#555555" FontSize="10">
                                                <Run Text="X:"/><Run Text="{Binding X, StringFormat=F1}"/>
                                                <Run Text=" Y:"/><Run Text="{Binding Y, StringFormat=F1}"/>
                                                <Run Text=" Z:"/><Run Text="{Binding Z, StringFormat=F1}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" Grid.ColumnSpan="2" Background="#007ACC" Padding="10,6">
            <StackPanel Orientation="Horizontal">
                <TextBlock Foreground="White">
                    <Run Text="State: " FontWeight="SemiBold"/>
                    <Run Text="{Binding ExecutionState}"/>
                </TextBlock>
                <TextBlock Foreground="White" Margin="30,0,0,0">
                    <Run Text="Line: " FontWeight="SemiBold"/>
                    <Run Text="{Binding CaretLineNumber}"/>
                </TextBlock>
                <TextBlock Foreground="#FFD700" Margin="30,0,0,0"
                           Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
                    <Run Text="Exec: " FontWeight="SemiBold"/>
                    <Run Text="{Binding CurrentLine}"/>
                </TextBlock>
                <TextBlock Foreground="White" Margin="30,0,0,0">
                    <Run Text="Program: " FontWeight="SemiBold"/>
                    <Run Text="{Binding ProgramName}"/>
                </TextBlock>
                <!-- Show target variable name when on motion line -->
                <TextBlock Foreground="#FFD700" Margin="30,0,0,0"
                           Visibility="{Binding IsOnMotionLine, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
                    <Run Text="Target: " FontWeight="SemiBold"/>
                    <Run Text="{Binding CaretTargetName}"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Errors Panel -->
        <Border Grid.Row="3" Grid.ColumnSpan="2" Background="#2A2A2A">
            <DockPanel>
                <Border DockPanel.Dock="Top" Background="#3E3E3E" Padding="10,6">
                    <TextBlock Text="ERRORS" Foreground="#F44336" FontWeight="SemiBold" FontSize="11"/>
                </Border>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Errors}" Margin="10,5">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Foreground="#F44336"
                                           FontFamily="Consolas" FontSize="12" Margin="0,2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
