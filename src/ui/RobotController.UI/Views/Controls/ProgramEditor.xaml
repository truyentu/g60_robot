<UserControl x:Class="RobotController.UI.Views.Controls.ProgramEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#2D2D30" Padding="8">
            <StackPanel Orientation="Horizontal">
                <Button Content="Run" Command="{Binding RunProgramCommand}"
                        Margin="2" Padding="12,6"
                        Background="#4CAF50" Foreground="White"
                        BorderThickness="0" Cursor="Hand"/>
                <Button Content="Pause" Command="{Binding PauseProgramCommand}"
                        Margin="2" Padding="12,6"
                        Background="#FF9800" Foreground="White"
                        BorderThickness="0" Cursor="Hand"/>
                <Button Content="Stop" Command="{Binding StopProgramCommand}"
                        Margin="2" Padding="12,6"
                        Background="#F44336" Foreground="White"
                        BorderThickness="0" Cursor="Hand"/>
                <Button Content="Step" Command="{Binding StepProgramCommand}"
                        Margin="2" Padding="12,6"
                        Background="#555555" Foreground="White"
                        BorderThickness="0" Cursor="Hand"/>
                <Button Content="Reset" Command="{Binding ResetProgramCommand}"
                        Margin="2" Padding="12,6"
                        Background="#555555" Foreground="White"
                        BorderThickness="0" Cursor="Hand"/>

                <Separator Margin="15,0" Width="1" Background="#555555"/>

                <TextBlock Text="Override:" VerticalAlignment="Center" Foreground="#AAAAAA" Margin="0,0,8,0"/>
                <Slider Minimum="1" Maximum="100" Value="{Binding OverridePercent}"
                        Width="120" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding OverridePercent, StringFormat={}{0}%}"
                           VerticalAlignment="Center" Foreground="White" Width="40" Margin="5,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Code Editor -->
        <Border Grid.Row="1" Grid.Column="0" Background="#1E1E1E" BorderThickness="0">
            <avalon:TextEditor x:Name="CodeEditor"
                               FontFamily="Consolas"
                               FontSize="14"
                               ShowLineNumbers="True"
                               Background="#1E1E1E"
                               Foreground="#D4D4D4"
                               LineNumbersForeground="#858585"
                               HorizontalScrollBarVisibility="Auto"
                               VerticalScrollBarVisibility="Auto"/>
        </Border>

        <!-- Point Database -->
        <Border Grid.Row="1" Grid.Column="1" Background="#252526">
            <DockPanel>
                <Border DockPanel.Dock="Top" Background="#333337" Padding="10,8">
                    <TextBlock Text="POINTS" FontWeight="SemiBold" Foreground="#AAAAAA" FontSize="11"/>
                </Border>

                <StackPanel DockPanel.Dock="Bottom" Margin="8">
                    <Button Content="Teach Point" Command="{Binding TeachPointCommand}"
                            Padding="8,6" Margin="0,0,0,4"
                            Background="#0E639C" Foreground="White"
                            BorderThickness="0" Cursor="Hand"/>
                    <Button Content="Refresh" Command="{Binding RefreshPointsCommand}"
                            Padding="8,6"
                            Background="#555555" Foreground="White"
                            BorderThickness="0" Cursor="Hand"/>
                </StackPanel>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Points}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#37373D" CornerRadius="4" Padding="10,8" Margin="6,3">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                                   Foreground="#4EC9B0" FontSize="13"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Foreground="#888888" FontSize="10">
                                                <Run Text="X:"/><Run Text="{Binding X, StringFormat=F1}"/>
                                                <Run Text=" Y:"/><Run Text="{Binding Y, StringFormat=F1}"/>
                                                <Run Text=" Z:"/><Run Text="{Binding Z, StringFormat=F1}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" Grid.ColumnSpan="2" Background="#007ACC" Padding="10,6">
            <StackPanel Orientation="Horizontal">
                <TextBlock Foreground="White">
                    <Run Text="State: " FontWeight="SemiBold"/>
                    <Run Text="{Binding ExecutionState}"/>
                </TextBlock>
                <TextBlock Foreground="White" Margin="30,0,0,0">
                    <Run Text="Line: " FontWeight="SemiBold"/>
                    <Run Text="{Binding CurrentLine}"/>
                </TextBlock>
                <TextBlock Foreground="White" Margin="30,0,0,0">
                    <Run Text="Program: " FontWeight="SemiBold"/>
                    <Run Text="{Binding ProgramName}"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Errors Panel -->
        <Border Grid.Row="3" Grid.ColumnSpan="2" Background="#1E1E1E">
            <DockPanel>
                <Border DockPanel.Dock="Top" Background="#252526" Padding="10,6">
                    <TextBlock Text="ERRORS" Foreground="#F44336" FontWeight="SemiBold" FontSize="11"/>
                </Border>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Errors}" Margin="10,5">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Foreground="#F44336"
                                           FontFamily="Consolas" FontSize="12" Margin="0,2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
