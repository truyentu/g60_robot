<UserControl x:Class="RobotController.UI.Views.Controls.ProgramEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:editor="clr-namespace:RobotController.UI.Editor"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#C8C8C8" Padding="8">
            <StackPanel Orientation="Horizontal">
                <Button Content="Open" Command="{Binding OpenFileCommand}"
                        Margin="2" Padding="12,6"
                        Background="#0E639C" Foreground="White"
                        BorderThickness="0" Cursor="Hand"
                        ToolTip="Open RPL program file"/>
                <Button Content="Save" Command="{Binding SaveFileCommand}"
                        Margin="2" Padding="12,6"
                        Background="#0E639C" Foreground="White"
                        BorderThickness="0" Cursor="Hand"
                        ToolTip="Save program file"/>

                <Separator Margin="15,0" Width="1" Background="#999999"/>

                <Button Command="{Binding RunProgramCommand}"
                        Margin="2" Padding="12,6"
                        BorderThickness="0" Cursor="Hand"
                        ToolTip="Start/Resume program execution">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#4CAF50"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Content" Value="&#x25B6; Start"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                    <Setter Property="Background" Value="#81C784"/>
                                    <Setter Property="IsEnabled" Value="False"/>
                                    <Setter Property="Content" Value="Running..."/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Command="{Binding PauseProgramCommand}"
                        Margin="2" Padding="12,6"
                        BorderThickness="0" Cursor="Hand"
                        ToolTip="Pause program execution">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF9800"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Content" Value="Pause"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsPaused}" Value="True">
                                    <Setter Property="Background" Value="#FFB74D"/>
                                    <Setter Property="Content" Value="Paused"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="&#x25A0; Stop" Command="{Binding StopProgramCommand}"
                        Margin="2" Padding="12,6"
                        Background="#F44336" Foreground="White"
                        BorderThickness="0" Cursor="Hand"
                        ToolTip="Stop program execution"/>
                <Button Content="Step &#x25B7;" Command="{Binding StepProgramCommand}"
                        Margin="2" Padding="12,6"
                        Background="#B8B8B8" Foreground="#222222"
                        BorderThickness="0" Cursor="Hand"
                        ToolTip="Execute one statement forward (single step)"/>
                <Button Content="&#x25C1; Back" Command="{Binding BackwardStepCommand}"
                        Margin="2" Padding="12,6"
                        Background="#7B1FA2" Foreground="White"
                        BorderThickness="0" Cursor="Hand"
                        ToolTip="Undo last executed statement (BWD)"/>
                <Button Content="&#x21BA; Reset" Command="{Binding ResetProgramCommand}"
                        Margin="2" Padding="12,6"
                        Background="#B8B8B8" Foreground="#222222"
                        BorderThickness="0" Cursor="Hand"
                        ToolTip="Reset program pointer to beginning"/>

                <Separator Margin="15,0" Width="1" Background="#999999"/>

                <!-- Block Select: Jump to caret line -->
                <Button Content="Block Sel" Command="{Binding BlockSelectCommand}"
                        Margin="2" Padding="12,6"
                        Background="#0277BD" Foreground="White"
                        BorderThickness="0" Cursor="Hand"
                        ToolTip="Jump execution to current caret line (Satzanwahl)"/>

                <Separator Margin="15,0" Width="1" Background="#999999"/>

                <!-- Touch-Up: Modify Position Button -->
                <Button Content="Modify Pos" Command="{Binding ModifyPositionCommand}"
                        Margin="2" Padding="12,6"
                        Background="#9C27B0" Foreground="White"
                        BorderThickness="0" Cursor="Hand"
                        ToolTip="Update selected target with current robot position (Touch-Up)"/>

                <!-- Insert Instruction: Command Palette -->
                <Rectangle Width="1" Fill="#CCCCCC" Margin="6,6,6,6"/>
                <ToggleButton x:Name="InsertInstructionToggle" Cursor="Hand"
                              Margin="2" ToolTip="Insert KRL instruction at caret (Ctrl+I)">
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border x:Name="bd" Background="#388E3C" Padding="12,6" CornerRadius="2">
                                <TextBlock Text="+ Insert" Foreground="White" FontWeight="SemiBold" FontSize="12"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#2E7D32"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#43A047"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>

                <Popup PlacementTarget="{Binding ElementName=InsertInstructionToggle}"
                       Placement="Bottom" StaysOpen="False" AllowsTransparency="True"
                       IsOpen="{Binding IsChecked, ElementName=InsertInstructionToggle, Mode=TwoWay}">
                    <Border Background="#F0F0F0" BorderBrush="#999999" BorderThickness="1"
                            CornerRadius="4" Padding="4" MinWidth="210">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="Insert Instruction" FontWeight="Bold" FontSize="11"
                                       Foreground="#555555" Margin="8,4"/>
                            <Separator Margin="4,2"/>
                            <!-- Motion -->
                            <TextBlock Text="MOTION" FontSize="9" Foreground="#999999" Margin="8,4,8,0" FontWeight="SemiBold"/>
                            <Button Content="PTP (Point-to-Point)" Click="InsertPTP_Click"
                                    Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left"
                                    Padding="12,4" FontSize="11" Cursor="Hand"/>
                            <Button Content="LIN (Linear)" Click="InsertLIN_Click"
                                    Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left"
                                    Padding="12,4" FontSize="11" Cursor="Hand"/>
                            <Button Content="CIRC (Circular)" Click="InsertCIRC_Click"
                                    Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left"
                                    Padding="12,4" FontSize="11" Cursor="Hand"/>
                            <Separator Margin="4,2"/>
                            <!-- System -->
                            <TextBlock Text="SYSTEM" FontSize="9" Foreground="#999999" Margin="8,4,8,0" FontWeight="SemiBold"/>
                            <Button Content="$VEL (Velocity)" Click="InsertVelocity_Click"
                                    Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left"
                                    Padding="12,4" FontSize="11" Cursor="Hand"/>
                            <Separator Margin="4,2"/>
                            <!-- Logic -->
                            <TextBlock Text="LOGIC" FontSize="9" Foreground="#999999" Margin="8,4,8,0" FontWeight="SemiBold"/>
                            <Button Content="WAIT (Timer / Condition)" Click="InsertWait_Click"
                                    Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left"
                                    Padding="12,4" FontSize="11" Cursor="Hand"/>
                            <Separator Margin="4,2"/>
                            <!-- I/O -->
                            <TextBlock Text="I/O" FontSize="9" Foreground="#999999" Margin="8,4,8,0" FontWeight="SemiBold"/>
                            <Button Content="$OUT (Set Output)" Click="InsertOutput_Click"
                                    Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left"
                                    Padding="12,4" FontSize="11" Cursor="Hand"/>
                            <Separator Margin="4,2"/>
                            <!-- Other -->
                            <TextBlock Text="OTHER" FontSize="9" Foreground="#999999" Margin="8,4,8,0" FontWeight="SemiBold"/>
                            <Button Content="; Comment" Click="InsertComment_Click"
                                    Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left"
                                    Padding="12,4" FontSize="11" Cursor="Hand"/>
                        </StackPanel>
                    </Border>
                </Popup>

                <!-- Path Preview Toggle -->
                <Button Margin="2" Padding="12,6"
                        BorderThickness="0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#0277BD"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Content" Value="Preview"/>
                            <Setter Property="Command" Value="{Binding PreviewPathCommand}"/>
                            <Setter Property="ToolTip" Value="Show predicted path on viewport"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsPathPreviewVisible}" Value="True">
                                    <Setter Property="Background" Value="#E65100"/>
                                    <Setter Property="Content" Value="Clear Preview"/>
                                    <Setter Property="Command" Value="{Binding ClearPreviewCommand}"/>
                                    <Setter Property="ToolTip" Value="Clear path preview from viewport"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Separator Margin="15,0" Width="1" Background="#999999"/>

                <TextBlock Text="Override:" VerticalAlignment="Center" Foreground="#555555" Margin="0,0,8,0"/>
                <Slider Minimum="1" Maximum="100" Value="{Binding OverridePercent}"
                        Width="120" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding OverridePercent, StringFormat={}{0}%}"
                           VerticalAlignment="Center" Foreground="#222222" Width="40" Margin="5,0,0,0"/>

                <!-- Fold/Unfold buttons -->
                <Rectangle Width="1" Fill="#CCCCCC" Margin="6,6,6,6"/>
                <Button x:Name="FoldAllButton" Click="FoldAllButton_Click"
                        ToolTip="Collapse All Folds"
                        Content="&#x25BC;" FontSize="11"
                        Margin="2" Padding="6,4"
                        Background="#B8B8B8" Foreground="#222222"
                        BorderThickness="0" Cursor="Hand"/>
                <Button x:Name="UnfoldAllButton" Click="UnfoldAllButton_Click"
                        ToolTip="Expand All Folds"
                        Content="&#x25B6;" FontSize="11"
                        Margin="2" Padding="6,4"
                        Background="#B8B8B8" Foreground="#222222"
                        BorderThickness="0" Cursor="Hand"/>

                <!-- Watch panel toggle -->
                <Rectangle Width="1" Fill="#CCCCCC" Margin="6,6,6,6"/>
                <Button Command="{Binding ToggleWatchPanelCommand}"
                        Margin="2" Padding="8,4"
                        BorderThickness="0" Cursor="Hand"
                        ToolTip="Toggle Variable Watch panel">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#B8B8B8"/>
                            <Setter Property="Foreground" Value="#222222"/>
                            <Setter Property="Content" Value="Watch"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsWatchPanelVisible}" Value="True">
                                    <Setter Property="Background" Value="#283593"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!-- Execution Mode Indicator (visible when program is selected for execution) -->
        <Border Grid.Row="1" Grid.Column="0" Height="24" VerticalAlignment="Top" Panel.ZIndex="50"
                Visibility="{Binding IsReadOnly, Converter={StaticResource BoolToVisibility}}">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#FFE082" Offset="0"/>
                    <GradientStop Color="#FFD54F" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0">
                <TextBlock Text="&#x25B6;" Foreground="#CC0000" FontSize="11"
                           VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBlock Foreground="#5D4037" FontSize="11" FontWeight="SemiBold"
                           FontFamily="Segoe UI" VerticalAlignment="Center">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="EXECUTION MODE â€” {0}  |  Line: {1}">
                            <Binding Path="ExecutionState"/>
                            <Binding Path="ExecutionLine"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Code Editor -->
        <Border Grid.Row="1" Grid.Column="0" Background="#FFFFFF" BorderThickness="0">
            <Grid>
                <avalon:TextEditor x:Name="CodeEditor"
                                   FontFamily="Consolas"
                                   FontSize="14"
                                   ShowLineNumbers="True"
                                   Background="#FFFFFF"
                                   Foreground="#1E1E1E"
                                   LineNumbersForeground="#999999"
                                   IsReadOnly="{Binding IsReadOnly}"
                                   HorizontalScrollBarVisibility="Auto"
                                   VerticalScrollBarVisibility="Auto">
                    <avalon:TextEditor.ContextMenu>
                        <ContextMenu Background="#F0F0F0" BorderBrush="#999999" FontFamily="Segoe UI" FontSize="12">
                            <MenuItem Header="Fold Current Block" Click="FoldCurrentBlock_Click"/>
                            <MenuItem Header="Unfold Current Block" Click="UnfoldCurrentBlock_Click"/>
                            <Separator/>
                            <MenuItem Header="Fold All" Click="FoldAllButton_Click"/>
                            <MenuItem Header="Unfold All" Click="UnfoldAllButton_Click"/>
                            <Separator/>
                            <MenuItem Header="Insert FOLD Block" Click="InsertFoldBlock_Click"/>
                            <Separator/>
                            <MenuItem Header="Insert PTP" Click="InsertPTP_Click"/>
                            <MenuItem Header="Insert LIN" Click="InsertLIN_Click"/>
                            <MenuItem Header="Insert CIRC" Click="InsertCIRC_Click"/>
                            <Separator/>
                            <MenuItem Header="Insert $VEL" Click="InsertVelocity_Click"/>
                            <MenuItem Header="Insert WAIT" Click="InsertWait_Click"/>
                            <MenuItem Header="Insert $OUT" Click="InsertOutput_Click"/>
                            <MenuItem Header="Insert Comment" Click="InsertComment_Click"/>
                        </ContextMenu>
                    </avalon:TextEditor.ContextMenu>
                </avalon:TextEditor>

                <!-- KUKA-Style Inline Command Editor Popup -->
                <Popup x:Name="InlineFormPopup"
                       PlacementTarget="{Binding ElementName=CodeEditor}"
                       Placement="Relative"
                       StaysOpen="True"
                       AllowsTransparency="True"
                       PopupAnimation="Fade">
                    <editor:InlineCommandEditor x:Name="InlineEditor" MaxWidth="800"/>
                </Popup>

                <!-- Task C: Floating Touch-Up Button (appears on motion lines) -->
                <Popup x:Name="TouchUpButtonPopup"
                       PlacementTarget="{Binding ElementName=CodeEditor}"
                       Placement="Relative"
                       StaysOpen="True"
                       AllowsTransparency="True"
                       PopupAnimation="None">
                    <Button x:Name="FloatingTouchUpBtn"
                            Content="&#xE7C8;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="14"
                            Width="28" Height="28"
                            Background="#9C27B0" Foreground="White"
                            BorderThickness="0" Cursor="Hand"
                            ToolTip="Touch-Up: Update position with current robot TCP"
                            Command="{Binding ModifyPositionCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="14"
                                        Padding="4">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="6" ShadowDepth="1" Opacity="0.4"/>
                                    </Border.Effect>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Popup>

                <!-- Toast Notification Overlay -->
                <Border x:Name="ToastOverlay"
                        VerticalAlignment="Top" HorizontalAlignment="Right"
                        Margin="0,10,20,0"
                        CornerRadius="6"
                        Padding="14,8"
                        MaxWidth="400"
                        Visibility="{Binding IsToastVisible, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#2E7D32"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ToastType}" Value="error">
                                    <Setter Property="Background" Value="#C62828"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="12" ShadowDepth="3" Opacity="0.5"/>
                    </Border.Effect>
                    <TextBlock Text="{Binding ToastMessage}"
                               Foreground="White" FontSize="12"
                               FontFamily="Consolas"
                               TextWrapping="Wrap"/>
                </Border>
            </Grid>
        </Border>

        <!-- Point Database + Touch-Up Panel -->
        <Border Grid.Row="1" Grid.Column="1" Background="#D0D0D0">
            <DockPanel>
                <Border DockPanel.Dock="Top" Background="#C8C8C8" Padding="10,8">
                    <TextBlock Text="POINTS" FontWeight="SemiBold" Foreground="#555555" FontSize="11"/>
                </Border>

                <!-- Touch-Up Info Panel -->
                <Border DockPanel.Dock="Top" Background="#B8D4E8" Padding="8,6"
                        Visibility="{Binding IsOnMotionLine, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
                    <StackPanel>
                        <TextBlock FontSize="10" Foreground="#333333">
                            <Run Text="Target: "/>
                            <Run Text="{Binding CaretTargetName}" Foreground="#8B4513" FontWeight="SemiBold"/>
                        </TextBlock>
                        <TextBlock Text="{Binding TouchUpStatus}" FontSize="10" Foreground="#2E7D32"
                                   Margin="0,2,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <StackPanel DockPanel.Dock="Bottom" Margin="8">
                    <Button Content="Teach Point" Command="{Binding TeachPointCommand}"
                            Padding="8,6" Margin="0,0,0,4"
                            Background="#1976D2" Foreground="White"
                            BorderThickness="0" Cursor="Hand"
                            ToolTip="Teach current position (save to .dat only)"/>
                    <Button Content="Teach &amp; Insert" Command="{Binding TeachAndInsertCommand}"
                            Padding="8,6" Margin="0,0,0,4"
                            Background="#4CAF50" Foreground="White"
                            BorderThickness="0" Cursor="Hand"
                            ToolTip="Teach current position and insert motion line at caret"/>
                    <Button Content="Refresh" Command="{Binding RefreshPointsCommand}"
                            Padding="8,6"
                            Background="#B8B8B8" Foreground="#222222"
                            BorderThickness="0" Cursor="Hand"/>
                </StackPanel>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListBox ItemsSource="{Binding Points}"
                             SelectedItem="{Binding SelectedPoint, Mode=TwoWay}"
                             Background="Transparent" BorderThickness="0"
                             HorizontalContentAlignment="Stretch">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Bd" Background="Transparent" Padding="0" Margin="0">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#40007ACC"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#20007ACC"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#C8C8C8" CornerRadius="4" Padding="10,8" Margin="6,3"
                                        Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ListBox}}">
                                    <Border.ContextMenu>
                                        <ContextMenu DataContext="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                                            <MenuItem Header="Go To Usage"
                                                      Command="{Binding GoToPointUsageCommand}"
                                                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                            <MenuItem Header="Re-teach"
                                                      Command="{Binding ReteachPointCommand}"/>
                                            <Separator/>
                                            <MenuItem Header="Delete"
                                                      Command="{Binding DeletePointCommand}"
                                                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                        </ContextMenu>
                                    </Border.ContextMenu>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                                   Foreground="#1A7A6D" FontSize="13"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Foreground="#555555" FontSize="10">
                                                <Run Text="X:"/><Run Text="{Binding X, StringFormat=F1}"/>
                                                <Run Text=" Y:"/><Run Text="{Binding Y, StringFormat=F1}"/>
                                                <Run Text=" Z:"/><Run Text="{Binding Z, StringFormat=F1}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- Variable Watch Panel (collapsible) -->
        <Border Grid.Row="2" Grid.ColumnSpan="2" MaxHeight="200"
                Visibility="{Binding IsWatchPanelVisible, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
            <Border Background="#F5F5F5" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0">
                <DockPanel>
                    <Border DockPanel.Dock="Top" Background="#E8EAF6" Padding="10,6">
                        <DockPanel>
                            <TextBlock Text="VARIABLE WATCH" FontWeight="SemiBold" Foreground="#283593" FontSize="11"
                                       VerticalAlignment="Center"/>
                            <Button Content="Refresh" Command="{Binding RefreshVariablesCommand}"
                                    DockPanel.Dock="Right" Padding="8,2"
                                    Background="#B8B8B8" Foreground="#222222"
                                    BorderThickness="0" Cursor="Hand" FontSize="10"/>
                        </DockPanel>
                    </Border>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding WatchVariables}" Margin="4,2">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="2,1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" MinWidth="100"/>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Name}"
                                                   FontFamily="Consolas" FontSize="11"
                                                   Foreground="#1565C0" FontWeight="SemiBold"
                                                   Margin="4,0"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Type}"
                                                   FontFamily="Consolas" FontSize="10"
                                                   Foreground="#777777" Margin="4,0"/>
                                        <Border Grid.Column="2" CornerRadius="2" Padding="4,0" Margin="2,0">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsChanged}" Value="True">
                                                            <Setter Property="Background" Value="#FFFDE7"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Value}"
                                                       FontFamily="Consolas" FontSize="11"
                                                       Foreground="#1B5E20"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Grid.ColumnSpan="2" Background="#007ACC" Padding="10,6">
            <StackPanel Orientation="Horizontal">
                <TextBlock Foreground="White">
                    <Run Text="State: " FontWeight="SemiBold"/>
                    <Run Text="{Binding ExecutionState}"/>
                </TextBlock>
                <TextBlock Foreground="White" Margin="30,0,0,0">
                    <Run Text="Line: " FontWeight="SemiBold"/>
                    <Run Text="{Binding CaretLineNumber}"/>
                </TextBlock>
                <TextBlock Foreground="#FFD700" Margin="30,0,0,0"
                           Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
                    <Run Text="Exec: " FontWeight="SemiBold"/>
                    <Run Text="{Binding CurrentLine}"/>
                </TextBlock>
                <TextBlock Foreground="White" Margin="30,0,0,0">
                    <Run Text="Program: " FontWeight="SemiBold"/>
                    <Run Text="{Binding ProgramName}"/>
                </TextBlock>
                <!-- Show target variable name when on motion line -->
                <TextBlock Foreground="#FFD700" Margin="30,0,0,0"
                           Visibility="{Binding IsOnMotionLine, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
                    <Run Text="Target: " FontWeight="SemiBold"/>
                    <Run Text="{Binding CaretTargetName}"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Errors Panel -->
        <Border Grid.Row="4" Grid.ColumnSpan="2" Background="#F5F5F5">
            <DockPanel>
                <Border DockPanel.Dock="Top" Background="#E0E0E0" Padding="10,6">
                    <TextBlock Text="ERRORS" Foreground="#D32F2F" FontWeight="SemiBold" FontSize="11"/>
                </Border>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Errors}" Margin="10,5">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Foreground="#D32F2F"
                                           FontFamily="Consolas" FontSize="12" Margin="0,2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
