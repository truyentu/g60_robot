<UserControl x:Class="RobotController.UI.Views.Controls.KukaJogPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="280">

    <UserControl.Resources>
        <!-- KUKA-style Jog +/- button -->
        <Style x:Key="KukaJogBtnStyle" TargetType="RepeatButton">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#5A5A5A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Delay" Value="300"/>
            <Setter Property="Interval" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border x:Name="bd" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#00AA00"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#00CC00"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Background" Value="#484848"/>
                                <Setter Property="Foreground" Value="#444444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Coordinate system ComboBox style — REPLACED by popup -->

        <!-- KUKA-style coordinate mode menu item -->
        <Style x:Key="CoordMenuItemStyle" TargetType="RadioButton">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="GroupName" Value="CoordMode"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="bd" Background="Transparent"
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="#525252" BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="32"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="24"/>
                                </Grid.ColumnDefinitions>
                                <!-- Icon -->
                                <TextBlock Grid.Column="0" Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                           FontSize="18" VerticalAlignment="Center"
                                           Foreground="#FFAA00"/>
                                <!-- Label -->
                                <ContentPresenter Grid.Column="1" VerticalAlignment="Center"/>
                                <!-- Check indicator -->
                                <Ellipse x:Name="chk" Grid.Column="2"
                                         Width="10" Height="10" Fill="Transparent"
                                         Stroke="#555555" StrokeThickness="2"
                                         VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#0078D7"/>
                                <Setter TargetName="chk" Property="Fill" Value="#00CC55"/>
                                <Setter TargetName="chk" Property="Stroke" Value="#00CC55"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#5A5A5A"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="bd" Property="Background" Value="#005FA3"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Motion control button style -->
        <Style x:Key="MotionBtnStyle" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="#3E3E3E">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="8">

                <!-- ============================================ -->
                <!-- COORDINATE SYSTEM SELECTOR                   -->
                <!-- KSS 8.3 p.68: Axes/World/Base/Tool          -->
                <!-- Click icon → popup menu (like KUKA smartHMI) -->
                <!-- ============================================ -->
                <Border Background="#363636" Margin="0,4,0,6"
                        BorderBrush="#2A2A2A" BorderThickness="1">
                    <!-- Toggle button — shows current mode icon + label -->
                    <ToggleButton x:Name="CoordToggle" Height="48" Cursor="Hand">
                        <ToggleButton.Template>
                            <ControlTemplate TargetType="ToggleButton">
                                <Border x:Name="bd" Background="#363636" Padding="10,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="36"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="CoordIcon" Grid.Column="0"
                                                   Text="&#x2699;" FontSize="24" Foreground="#FFAA00"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock x:Name="CoordLabel" Grid.Column="1"
                                                   Text="Axes" FontSize="16" FontWeight="Bold"
                                                   Foreground="White" VerticalAlignment="Center"
                                                   FontFamily="Segoe UI"/>
                                        <TextBlock Grid.Column="2" Text="&#x25BC;"
                                                   FontSize="10" Foreground="#888888"
                                                   VerticalAlignment="Center" Margin="8,0,4,0"/>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bd" Property="Background" Value="#484848"/>
                                    </Trigger>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="bd" Property="Background" Value="#525252"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </ToggleButton.Template>
                    </ToggleButton>

                    <!-- Popup menu (KUKA style — vertical list with icons) -->
                </Border>
                <Popup x:Name="CoordPopup"
                       PlacementTarget="{Binding ElementName=CoordToggle}"
                       Placement="Left"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       IsOpen="{Binding IsChecked, ElementName=CoordToggle, Mode=TwoWay}">
                    <Border Background="#3A3A3A" BorderBrush="#5A5A5A" BorderThickness="1"
                            Margin="4" CornerRadius="4" MinWidth="200">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" Opacity="0.5" ShadowDepth="4"/>
                        </Border.Effect>
                        <StackPanel>
                            <!-- Header -->
                            <TextBlock Text="Jog Coordinate System" Foreground="#888888"
                                       FontSize="10" Margin="12,8,12,4" FontFamily="Segoe UI"/>
                            <Rectangle Height="1" Fill="#525252" Margin="0,2"/>

                            <!-- Axes -->
                            <RadioButton x:Name="RadioAxes" Content="Axes"
                                         Tag="&#x2699;" IsChecked="True"
                                         Style="{StaticResource CoordMenuItemStyle}"
                                         Checked="CoordRadio_Checked"/>
                            <!-- World -->
                            <RadioButton x:Name="RadioWorld" Content="World"
                                         Tag="&#x2600;"
                                         Style="{StaticResource CoordMenuItemStyle}"
                                         Checked="CoordRadio_Checked"/>
                            <!-- Base -->
                            <RadioButton x:Name="RadioBase" Content="Base"
                                         Tag="&#x25A6;"
                                         Style="{StaticResource CoordMenuItemStyle}"
                                         Checked="CoordRadio_Checked"/>
                            <!-- Tool -->
                            <RadioButton x:Name="RadioTool" Content="Tool"
                                         Tag="&#x2692;"
                                         Style="{StaticResource CoordMenuItemStyle}"
                                         Checked="CoordRadio_Checked"/>
                        </StackPanel>
                    </Border>
                </Popup>

                <!-- ============================================ -->
                <!-- JOG KEYS — 6 rows, each with [Label] [-] [+] [Value] -->
                <!-- KSS 8.3 p.71-72                              -->
                <!-- ============================================ -->
                <TextBlock Text="JOG KEYS" FontWeight="Bold" Margin="0,0,0,6"
                           Foreground="#888888" FontSize="10" FontFamily="Segoe UI"/>
                <Border Background="#363636" Padding="6" Margin="0,0,0,10"
                        BorderBrush="#2A2A2A" BorderThickness="1">
                    <StackPanel>
                        <!-- Row 0 (A1 / X) -->
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="36"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="Label0" Grid.Column="0" Text="A1"
                                       Foreground="#FFAA00" FontSize="14" FontWeight="Bold"
                                       FontFamily="Consolas" VerticalAlignment="Center"/>
                            <RepeatButton Grid.Column="1" Content="&#x2212;"
                                          Style="{StaticResource KukaJogBtnStyle}"
                                          Tag="0" Margin="0,0,4,0"
                                          PreviewMouseDown="JogMinus_MouseDown"
                                          PreviewMouseUp="Jog_MouseUp"/>
                            <RepeatButton Grid.Column="2" Content="+"
                                          Style="{StaticResource KukaJogBtnStyle}"
                                          Tag="0"
                                          PreviewMouseDown="JogPlus_MouseDown"
                                          PreviewMouseUp="Jog_MouseUp"/>
                            <TextBlock x:Name="Value0" Grid.Column="3"
                                       Text="0.00" Foreground="#CCCCCC"
                                       FontSize="13" FontFamily="Consolas"
                                       VerticalAlignment="Center" HorizontalAlignment="Right"
                                       Margin="0,0,4,0"/>
                        </Grid>

                        <Rectangle Height="1" Fill="#525252" Margin="0,2"/>

                        <!-- Row 1 (A2 / Y) -->
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="36"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="Label1" Grid.Column="0" Text="A2"
                                       Foreground="#FFAA00" FontSize="14" FontWeight="Bold"
                                       FontFamily="Consolas" VerticalAlignment="Center"/>
                            <RepeatButton Grid.Column="1" Content="&#x2212;"
                                          Style="{StaticResource KukaJogBtnStyle}"
                                          Tag="1" Margin="0,0,4,0"
                                          PreviewMouseDown="JogMinus_MouseDown"
                                          PreviewMouseUp="Jog_MouseUp"/>
                            <RepeatButton Grid.Column="2" Content="+"
                                          Style="{StaticResource KukaJogBtnStyle}"
                                          Tag="1"
                                          PreviewMouseDown="JogPlus_MouseDown"
                                          PreviewMouseUp="Jog_MouseUp"/>
                            <TextBlock x:Name="Value1" Grid.Column="3"
                                       Text="0.00" Foreground="#CCCCCC"
                                       FontSize="13" FontFamily="Consolas"
                                       VerticalAlignment="Center" HorizontalAlignment="Right"
                                       Margin="0,0,4,0"/>
                        </Grid>

                        <Rectangle Height="1" Fill="#525252" Margin="0,2"/>

                        <!-- Row 2 (A3 / Z) -->
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="36"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="Label2" Grid.Column="0" Text="A3"
                                       Foreground="#FFAA00" FontSize="14" FontWeight="Bold"
                                       FontFamily="Consolas" VerticalAlignment="Center"/>
                            <RepeatButton Grid.Column="1" Content="&#x2212;"
                                          Style="{StaticResource KukaJogBtnStyle}"
                                          Tag="2" Margin="0,0,4,0"
                                          PreviewMouseDown="JogMinus_MouseDown"
                                          PreviewMouseUp="Jog_MouseUp"/>
                            <RepeatButton Grid.Column="2" Content="+"
                                          Style="{StaticResource KukaJogBtnStyle}"
                                          Tag="2"
                                          PreviewMouseDown="JogPlus_MouseDown"
                                          PreviewMouseUp="Jog_MouseUp"/>
                            <TextBlock x:Name="Value2" Grid.Column="3"
                                       Text="0.00" Foreground="#CCCCCC"
                                       FontSize="13" FontFamily="Consolas"
                                       VerticalAlignment="Center" HorizontalAlignment="Right"
                                       Margin="0,0,4,0"/>
                        </Grid>

                        <Rectangle Height="1" Fill="#525252" Margin="0,2"/>

                        <!-- Row 3 (A4 / A) -->
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="36"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="Label3" Grid.Column="0" Text="A4"
                                       Foreground="#FFAA00" FontSize="14" FontWeight="Bold"
                                       FontFamily="Consolas" VerticalAlignment="Center"/>
                            <RepeatButton Grid.Column="1" Content="&#x2212;"
                                          Style="{StaticResource KukaJogBtnStyle}"
                                          Tag="3" Margin="0,0,4,0"
                                          PreviewMouseDown="JogMinus_MouseDown"
                                          PreviewMouseUp="Jog_MouseUp"/>
                            <RepeatButton Grid.Column="2" Content="+"
                                          Style="{StaticResource KukaJogBtnStyle}"
                                          Tag="3"
                                          PreviewMouseDown="JogPlus_MouseDown"
                                          PreviewMouseUp="Jog_MouseUp"/>
                            <TextBlock x:Name="Value3" Grid.Column="3"
                                       Text="0.00" Foreground="#CCCCCC"
                                       FontSize="13" FontFamily="Consolas"
                                       VerticalAlignment="Center" HorizontalAlignment="Right"
                                       Margin="0,0,4,0"/>
                        </Grid>

                        <Rectangle Height="1" Fill="#525252" Margin="0,2"/>

                        <!-- Row 4 (A5 / B) -->
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="36"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="Label4" Grid.Column="0" Text="A5"
                                       Foreground="#FFAA00" FontSize="14" FontWeight="Bold"
                                       FontFamily="Consolas" VerticalAlignment="Center"/>
                            <RepeatButton Grid.Column="1" Content="&#x2212;"
                                          Style="{StaticResource KukaJogBtnStyle}"
                                          Tag="4" Margin="0,0,4,0"
                                          PreviewMouseDown="JogMinus_MouseDown"
                                          PreviewMouseUp="Jog_MouseUp"/>
                            <RepeatButton Grid.Column="2" Content="+"
                                          Style="{StaticResource KukaJogBtnStyle}"
                                          Tag="4"
                                          PreviewMouseDown="JogPlus_MouseDown"
                                          PreviewMouseUp="Jog_MouseUp"/>
                            <TextBlock x:Name="Value4" Grid.Column="3"
                                       Text="0.00" Foreground="#CCCCCC"
                                       FontSize="13" FontFamily="Consolas"
                                       VerticalAlignment="Center" HorizontalAlignment="Right"
                                       Margin="0,0,4,0"/>
                        </Grid>

                        <Rectangle Height="1" Fill="#525252" Margin="0,2"/>

                        <!-- Row 5 (A6 / C) -->
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="36"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="Label5" Grid.Column="0" Text="A6"
                                       Foreground="#FFAA00" FontSize="14" FontWeight="Bold"
                                       FontFamily="Consolas" VerticalAlignment="Center"/>
                            <RepeatButton Grid.Column="1" Content="&#x2212;"
                                          Style="{StaticResource KukaJogBtnStyle}"
                                          Tag="5" Margin="0,0,4,0"
                                          PreviewMouseDown="JogMinus_MouseDown"
                                          PreviewMouseUp="Jog_MouseUp"/>
                            <RepeatButton Grid.Column="2" Content="+"
                                          Style="{StaticResource KukaJogBtnStyle}"
                                          Tag="5"
                                          PreviewMouseDown="JogPlus_MouseDown"
                                          PreviewMouseUp="Jog_MouseUp"/>
                            <TextBlock x:Name="Value5" Grid.Column="3"
                                       Text="0.00" Foreground="#CCCCCC"
                                       FontSize="13" FontFamily="Consolas"
                                       VerticalAlignment="Center" HorizontalAlignment="Right"
                                       Margin="0,0,4,0"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- ============================================ -->
                <!-- MOTION STATE + CONTROLS                      -->
                <!-- ============================================ -->
                <TextBlock Text="MOTION CONTROL" FontWeight="Bold" Margin="0,0,0,6"
                           Foreground="#888888" FontSize="10" FontFamily="Segoe UI"/>
                <Border Background="#363636" Padding="8" Margin="0,0,0,10"
                        BorderBrush="#2A2A2A" BorderThickness="1">
                    <StackPanel>
                        <!-- State display -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="State:" Foreground="#777777" FontSize="12"
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding MotionControl.MachineState, FallbackValue='Disconnected'}"
                                       Foreground="{Binding MotionControl.MachineStateColor, FallbackValue=#808080}"
                                       FontSize="14" FontWeight="Bold"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <!-- Buttons -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="STOP"
                                    Background="#CC0000"
                                    Style="{StaticResource MotionBtnStyle}"
                                    Command="{Binding MotionControl.StopMotionCommand}"/>
                            <Button Grid.Column="2" Content="HOME"
                                    Background="#0078D7"
                                    Style="{StaticResource MotionBtnStyle}"
                                    Command="{Binding MotionControl.GoHomeCommand}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- ============================================ -->
                <!-- 3D JOG MODE (keep existing functionality)    -->
                <!-- ============================================ -->
                <Border Background="#363636" Padding="8" Margin="0,0,0,10"
                        BorderBrush="#2A2A2A" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="3D JOG MODE" FontWeight="Bold" Margin="0,0,0,8"
                                   Foreground="#888888" FontSize="10" FontFamily="Segoe UI"/>
                        <CheckBox Content="Enable 3D Gizmo"
                                  IsChecked="{Binding Is3DJogEnabled}"
                                  Foreground="#CCCCCC" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8"
                                    IsEnabled="{Binding Is3DJogEnabled}">
                            <TextBlock Text="Frame:" Foreground="#777777" VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <RadioButton Content="World" GroupName="GizmoFrame"
                                         IsChecked="{Binding IsGizmoWorldFrame}"
                                         Foreground="#CCCCCC" Margin="0,0,12,0"/>
                            <RadioButton Content="Tool" GroupName="GizmoFrame"
                                         IsChecked="{Binding IsGizmoWorldFrame, Converter={StaticResource InverseBool}}"
                                         Foreground="#CCCCCC"/>
                        </StackPanel>
                        <CheckBox Content="Live Mode (move during drag)"
                                  IsChecked="{Binding Is3DJogLiveMode}"
                                  IsEnabled="{Binding Is3DJogEnabled}"
                                  Foreground="#CCCCCC" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding GizmoDragStatus}"
                                   Foreground="#00FF88" FontSize="12" FontWeight="Bold"
                                   Visibility="{Binding GizmoDragStatus, Converter={StaticResource StringToVisibilityConverter}}"/>
                    </StackPanel>
                </Border>

                <!-- ============================================ -->
                <!-- TEACH & INSERT                               -->
                <!-- ============================================ -->
                <Border Background="#363636" Padding="8" Margin="0,0,0,10"
                        BorderBrush="#2A2A2A" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="TEACH &amp; INSERT" FontWeight="Bold" Margin="0,0,0,8"
                                   Foreground="#888888" FontSize="10" FontFamily="Segoe UI"/>
                        <TextBlock Text="Motion Type" Foreground="#777777" FontSize="10" Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding ProgramEditor.AvailableMotionTypes}"
                                  SelectedItem="{Binding ProgramEditor.TeachMotionType}"
                                  Margin="0,0,0,8" FontSize="12"/>
                        <TextBlock Text="Velocity (m/s)" Foreground="#777777" FontSize="10" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding ProgramEditor.TeachVelocity, StringFormat=F2}"
                                 Margin="0,0,0,8" FontSize="12"/>
                        <TextBlock Text="Approximation" Foreground="#777777" FontSize="10" Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding ProgramEditor.AvailableApproximations}"
                                  SelectedItem="{Binding ProgramEditor.TeachApproximation}"
                                  Margin="0,0,0,10" FontSize="12"/>
                        <Button Content="TEACH &amp; INSERT"
                                Command="{Binding ProgramEditor.TeachAndInsertCommand}"
                                Padding="10,10" FontWeight="Bold" FontSize="13"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#00AA44"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="bd" Background="{TemplateBinding Background}"
                                                        Padding="{TemplateBinding Padding}"
                                                        SnapsToDevicePixels="True">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bd" Property="Background" Value="#00CC55"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="bd" Property="Background" Value="#008833"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
