<UserControl x:Class="RobotController.UI.Views.Controls.HomingPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="600"
             Background="{StaticResource SecondaryBackground}">

    <UserControl.Resources>
        <!-- Status colors -->
        <SolidColorBrush x:Key="HomedColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="HomingColor" Color="#FF9800"/>
        <SolidColorBrush x:Key="ErrorColor" Color="#F44336"/>
        <SolidColorBrush x:Key="NotHomedColor" Color="#9E9E9E"/>

        <!-- Joint item style -->
        <Style x:Key="JointItemBorder" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PrimaryBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBackground}"
                Padding="15" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Robot Homing" FontSize="18" FontWeight="Bold"
                               Foreground="{StaticResource ForegroundBrush}"/>
                    <TextBlock Foreground="Gray" Margin="0,5,0,0">
                        <Run Text="Status: "/>
                        <Run Text="{Binding HomedCount, FallbackValue=0}"/>
                        <Run Text="/"/>
                        <Run Text="{Binding TotalJoints, FallbackValue=6}"/>
                        <Run Text=" joints homed"/>
                    </TextBlock>
                </StackPanel>

                <!-- Summary indicators -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource HomedColor}" CornerRadius="4" Padding="10,5"
                            Visibility="{Binding IsAllHomed, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="ALL HOMED" Foreground="White" FontWeight="Bold"/>
                    </Border>
                    <Border Background="{StaticResource HomingColor}" CornerRadius="4" Padding="10,5"
                            Visibility="{Binding IsHomingInProgress, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="HOMING..." Foreground="White" FontWeight="Bold"/>
                    </Border>
                    <Border Background="{StaticResource ErrorColor}" CornerRadius="4" Padding="10,5"
                            Visibility="{Binding HasError, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="ERROR" Foreground="White" FontWeight="Bold"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Joint List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15,0">
            <ItemsControl ItemsSource="{Binding JointStates}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource JointItemBorder}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>

                                <!-- Joint name -->
                                <TextBlock Grid.Column="0" Text="{Binding JointName}"
                                           FontSize="16" FontWeight="Bold"
                                           Foreground="{StaticResource ForegroundBrush}"
                                           VerticalAlignment="Center"/>

                                <!-- Status icon -->
                                <TextBlock Grid.Column="1" Text="{Binding StatusIcon}"
                                           FontSize="20" VerticalAlignment="Center"
                                           HorizontalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsHomed}" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource HomedColor}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsHoming}" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource HomingColor}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding HasError}" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource ErrorColor}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsNotHomed}" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource NotHomedColor}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- Status and progress -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="10,0">
                                    <TextBlock Text="{Binding State}"
                                               Foreground="{StaticResource ForegroundBrush}"/>

                                    <!-- Progress bar (visible during homing) -->
                                    <ProgressBar Value="{Binding Progress}" Maximum="1" Height="4"
                                                 Margin="0,5,0,0"
                                                 Visibility="{Binding IsHoming, Converter={StaticResource BoolToVisibility}}"/>

                                    <!-- Error message -->
                                    <TextBlock Text="{Binding ErrorMessage}" Foreground="{StaticResource ErrorColor}"
                                               FontSize="11" TextWrapping="Wrap"
                                               Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
                                </StackPanel>

                                <!-- Position -->
                                <StackPanel Grid.Column="3" VerticalAlignment="Center">
                                    <TextBlock Foreground="Gray" FontSize="11" Text="Position"/>
                                    <TextBlock Foreground="{StaticResource ForegroundBrush}">
                                        <Run Text="{Binding CurrentPosition, StringFormat=F2}"/>
                                        <Run Text="Â°"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Home button -->
                                <Button Grid.Column="4" Content="Home"
                                        Command="{Binding DataContext.StartHomingSingleCommand,
                                                  RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding JointIndex}"
                                        IsEnabled="{Binding IsNotHomed}"
                                        Padding="10,5"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Bottom Controls -->
        <Border Grid.Row="2" Background="{StaticResource PrimaryBackground}"
                Padding="15" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Method selection -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Method:" Foreground="{StaticResource ForegroundBrush}"
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox ItemsSource="{Binding AvailableMethods}"
                              SelectedItem="{Binding SelectedMethod}"
                              Width="150" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Action buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Refresh" Command="{Binding RefreshCommand}"
                            Margin="0,0,10,0" Padding="15,8"/>

                    <Button Content="Stop" Command="{Binding StopHomingCommand}"
                            Background="{StaticResource ErrorColor}"
                            Foreground="White"
                            Visibility="{Binding IsHomingInProgress, Converter={StaticResource BoolToVisibility}}"
                            Margin="0,0,10,0" Padding="15,8"/>

                    <Button Command="{Binding StartHomingAllCommand}"
                            IsEnabled="{Binding IsHomingInProgress, Converter={StaticResource InverseBool}}"
                            Padding="20,8">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsAllHomed}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource HomedColor}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Home All Joints" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading overlay -->
        <Border Grid.RowSpan="3" Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Loading..." Foreground="White" FontSize="16"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
