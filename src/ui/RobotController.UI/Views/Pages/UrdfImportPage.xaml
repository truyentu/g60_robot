<UserControl x:Class="RobotController.UI.Views.Pages.UrdfImportPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:vm="clr-namespace:RobotController.UI.ViewModels.Pages"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:UrdfImportViewModel}"
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="URDF Import Wizard" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Import robot packages from ROS-Industrial URDF/xacro files"
                       Foreground="Gray" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Input Section -->
        <GroupBox Grid.Row="1" Header="1. Select URDF File" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Text="{Binding UrdfFilePath, UpdateSourceTrigger=PropertyChanged}"
                         IsReadOnly="True" Margin="0,0,10,0"/>
                <Button Grid.Column="1" Content="Browse..." Command="{Binding BrowseUrdfFileCommand}"/>
            </Grid>
        </GroupBox>

        <!-- Robot Info Section -->
        <GroupBox Grid.Row="2" Header="2. Robot Information" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Robot Name:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding RobotName, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,20,10"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="Manufacturer:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding Manufacturer, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,10"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Output Dir:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                         Text="{Binding OutputDirectory, UpdateSourceTrigger=PropertyChanged}"
                         IsReadOnly="True" Margin="0,0,10,0"/>
                <Button Grid.Row="1" Grid.Column="3" Content="Browse..."
                           Command="{Binding BrowseOutputDirectoryCommand}" HorizontalAlignment="Left"/>
            </Grid>
        </GroupBox>

        <!-- Results Section -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Parsed Joints -->
            <GroupBox Grid.Column="0" Header="Parsed Joints" Margin="0,0,10,0">
                <DataGrid ItemsSource="{Binding ParsedJoints}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          VerticalScrollBarVisibility="Auto"
                          Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="80"/>
                        <DataGridTextColumn Header="Origin (mm)" Binding="{Binding OriginDisplay}" Width="150"/>
                        <DataGridTextColumn Header="Axis" Binding="{Binding AxisDisplay}" Width="80"/>
                        <DataGridTextColumn Header="Limits" Binding="{Binding LimitsDisplay}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Generated YAML -->
            <GroupBox Grid.Column="1" Header="Generated robot.yaml" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Row="0" Text="{Binding GeneratedYaml, Mode=OneWay}"
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             FontSize="11"
                             AcceptsReturn="True"
                             TextWrapping="NoWrap"/>
                    <Button Grid.Row="1" Content="Copy to Clipboard"
                               Command="{Binding CopyYamlToClipboardCommand}"
                               Margin="5" HorizontalAlignment="Right"/>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Actions -->
        <Grid Grid.Row="4" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="{Binding StatusMessage}"
                       VerticalAlignment="Center" Foreground="Gray"/>

            <Button Grid.Column="1" Content="Parse URDF"
                       Command="{Binding ParseUrdfCommand}"
                       Margin="0,0,10,0"
                       IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBool}}"/>

            <Button Grid.Column="2" Content="Generate robot.yaml"
                       Command="{Binding GenerateYamlCommand}"
                       IsEnabled="{Binding IsParsed}"/>
        </Grid>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="5"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="50" Height="6"/>
                <TextBlock Text="Processing..." Foreground="White" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
