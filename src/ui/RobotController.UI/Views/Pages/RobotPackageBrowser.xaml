<UserControl x:Class="RobotController.UI.Views.Pages.RobotPackageBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:pages="clr-namespace:RobotController.UI.ViewModels.Pages"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="400"
             d:DataContext="{d:DesignInstance Type=pages:RobotPackageBrowserViewModel}">

    <Border Background="#4E4E4E" CornerRadius="8" Padding="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="ROBOT LIBRARY"
                           FontWeight="Bold"
                           FontSize="14"
                           Foreground="#AAAAAA"/>
                <TextBlock Text="Select a robot model to load into the simulator"
                           FontSize="11"
                           Foreground="#666666"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Package List -->
            <Border Grid.Row="1" Background="#3E3E3E" CornerRadius="4">
                <ListBox ItemsSource="{Binding AvailablePackages}"
                         SelectedItem="{Binding SelectedPackage}"
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Border"
                                                Background="Transparent"
                                                CornerRadius="4"
                                                Padding="10"
                                                Margin="4">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#3A5FCD"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#5E5E5E"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Robot Icon -->
                                <Border Grid.Column="0"
                                        Width="40" Height="40"
                                        Background="#5E5E5E"
                                        CornerRadius="4"
                                        Margin="0,0,10,0">
                                    <TextBlock Text="R"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="#4EC9B0"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <!-- Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Foreground="#888888" FontSize="11">
                                        <Run Text="{Binding Manufacturer}"/>
                                        <Run Text=" | "/>
                                        <Run Text="{Binding Dof}"/>
                                        <Run Text=" DOF"/>
                                    </TextBlock>
                                    <TextBlock Foreground="#666666" FontSize="10">
                                        <Run Text="Payload: "/>
                                        <Run Text="{Binding PayloadKg, StringFormat=F1}"/>
                                        <Run Text=" kg | Reach: "/>
                                        <Run Text="{Binding ReachMm, StringFormat=F0}"/>
                                        <Run Text=" mm"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Import"
                        Command="{Binding OpenImportDialogCommand}"
                        Padding="15,8"
                        Margin="0,0,5,0"
                        Background="#0078D4"
                        Foreground="White"
                        BorderThickness="0"
                        ToolTip="Import robot from URDF/XACRO"/>
                <Button Content="Refresh"
                        Command="{Binding RefreshPackagesCommand}"
                        Padding="15,8"
                        Margin="0,0,5,0"
                        Background="#5E5E5E"
                        Foreground="White"
                        BorderThickness="0"/>
                <Button Content="Load"
                        Command="{Binding LoadSelectedPackageCommand}"
                        Padding="15,8"
                        Margin="0,0,5,0"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        IsEnabled="{Binding SelectedPackage, Converter={StaticResource NullToBoolConverter}}"/>
                <Button Content="Delete"
                        Command="{Binding DeleteSelectedPackageCommand}"
                        Padding="15,8"
                        Background="#D32F2F"
                        Foreground="White"
                        BorderThickness="0"
                        IsEnabled="{Binding SelectedPackage, Converter={StaticResource NullToBoolConverter}}"
                        ToolTip="Delete selected robot package"/>
            </StackPanel>

            <!-- Status Bar -->
            <Border Grid.Row="3"
                    Background="#363636"
                    CornerRadius="4"
                    Padding="10,5"
                    Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal">
                    <ProgressBar Width="16" Height="16"
                                 IsIndeterminate="True"
                                 Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                                 Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="#888888"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
