<UserControl x:Class="RobotController.UI.Views.Pages.NavigatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:RobotController.UI.Models"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="300"
             Background="#E0E0E0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28"/>    <!-- Header: filter + path -->
            <RowDefinition Height="*"/>     <!-- Content: tree + file list -->
            <RowDefinition Height="20"/>    <!-- Status bar -->
        </Grid.RowDefinitions>

        <!-- Row 0: Header -->
        <Border Grid.Row="0" Background="#CCCCCC" BorderBrush="#BBBBBB" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Filter dropdown -->
                <ComboBox Grid.Column="0" Width="100" Margin="8,4"
                          SelectedIndex="{Binding SelectedFilterIndex}"
                          Background="#D8D8D8" Foreground="#222222"
                          BorderBrush="#BBBBBB" FontSize="11">
                    <ComboBoxItem Content="Module" Foreground="#222222"/>
                    <ComboBoxItem Content="Detail" Foreground="#222222"/>
                </ComboBox>

                <!-- Current path display -->
                <TextBlock Grid.Column="1"
                           Text="{Binding CurrentDisplayPath}"
                           Foreground="#555555" FontSize="11"
                           FontFamily="Segoe UI"
                           VerticalAlignment="Center" Margin="8,0"/>
            </Grid>
        </Border>

        <!-- Row 1: Content â€” Tree + FileList -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" MinWidth="120"/>
                <ColumnDefinition Width="3"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Directory Tree -->
            <TreeView Grid.Column="0"
                      x:Name="DirTreeView"
                      Background="#F0F0F0"
                      Foreground="#333333"
                      BorderThickness="0"
                      ItemsSource="{Binding DirectoryTree}"
                      SelectedItemChanged="TreeView_SelectedItemChanged"
                      FontFamily="Segoe UI" FontSize="11"
                      Padding="4">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type models:DirectoryNode}"
                                               ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal" Margin="2,1">
                            <TextBlock Width="18" FontSize="14" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="&#x1F4C1;"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                                <Setter Property="Text" Value="&#x1F4C2;"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="{Binding Name}" Margin="4,0" FontSize="11"
                                       Foreground="#333333"/>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>
                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                        <Setter Property="Foreground" Value="#333333"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Padding" Value="2"/>
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="3"
                          Background="#BBBBBB"
                          HorizontalAlignment="Stretch"/>

            <!-- Right: File List (ListView) -->
            <ListView Grid.Column="2"
                      x:Name="FileListView"
                      Background="#FFFFFF"
                      Foreground="#333333"
                      BorderThickness="0"
                      ItemsSource="{Binding FileList}"
                      SelectedItem="{Binding SelectedFile}"
                      MouseDoubleClick="FileList_DoubleClick"
                      FontFamily="Segoe UI" FontSize="11">
                <ListView.View>
                    <GridView>
                        <GridView.ColumnHeaderContainerStyle>
                            <Style TargetType="GridViewColumnHeader">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#555555"/>
                                <Setter Property="BorderBrush" Value="#BBBBBB"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="Padding" Value="6,4"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="FontFamily" Value="Segoe UI"/>
                            </Style>
                        </GridView.ColumnHeaderContainerStyle>

                        <!-- Icon -->
                        <GridViewColumn Width="30">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding TypeIcon}" FontSize="14"
                                               HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Name -->
                        <GridViewColumn Header="Name" Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayName}" Foreground="#333333"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Extension -->
                        <GridViewColumn Header="Ext" Width="60">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Extension}" Foreground="#777777"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Comment -->
                        <GridViewColumn Header="Comment" Width="140">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Comment}" Foreground="#777777"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Size -->
                        <GridViewColumn Header="Size" Width="60">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding SizeDisplay}" Foreground="#777777"
                                               TextAlignment="Right"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Changed -->
                        <GridViewColumn Header="Changed" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ModifiedDisplay}" Foreground="#777777"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Foreground" Value="#333333"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Padding" Value="2,1"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#3A6EA5"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C8C8C8"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </Grid>

        <!-- Row 2: Status bar -->
        <Border Grid.Row="2" Background="#CCCCCC" BorderBrush="#BBBBBB" BorderThickness="0,1,0,0">
            <TextBlock Text="{Binding StatusText}"
                       Foreground="#666666" FontSize="11"
                       FontFamily="Segoe UI"
                       VerticalAlignment="Center" Margin="8,0"/>
        </Border>
    </Grid>
</UserControl>
