<UserControl x:Class="RobotController.UI.Views.Pages.ManualJogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:RobotController.UI.Views.Controls"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="Transparent">

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Position Display -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Joint Positions Large Display -->
            <Border Grid.Row="0" Background="#2D2D2D" CornerRadius="8" Padding="16" Margin="0,0,16,16">
                <StackPanel>
                    <TextBlock Text="JOINT POSITIONS" FontSize="14" FontWeight="Bold"
                               Foreground="#AAAAAA" Margin="0,0,0,12"/>

                    <ItemsControl ItemsSource="{Binding Joints}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{Binding Name}"
                                               Foreground="#888888" FontWeight="Bold"
                                               VerticalAlignment="Center"/>

                                    <ProgressBar Grid.Column="1"
                                                 Value="{Binding Position}"
                                                 Minimum="{Binding MinLimit}"
                                                 Maximum="{Binding MaxLimit}"
                                                 Height="12"
                                                 Background="#353535"
                                                 Foreground="#0078D7"/>

                                    <TextBlock Grid.Column="2"
                                               Text="{Binding Position, StringFormat={}{0:F2}째}"
                                               Foreground="White" FontSize="14" FontWeight="Bold"
                                               TextAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- TCP Position Display -->
            <Border Grid.Row="1" Background="#2D2D2D" CornerRadius="8" Padding="16" Margin="0,0,16,0">
                <StackPanel>
                    <TextBlock Text="TCP POSITION" FontSize="14" FontWeight="Bold"
                               Foreground="#AAAAAA" Margin="0,0,0,12"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Position -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,8">
                            <TextBlock Text="X" Foreground="Red" FontWeight="Bold"/>
                            <TextBlock Text="{Binding TcpPosition.X, StringFormat={}{0:F2} mm}"
                                       Foreground="White" FontSize="18"/>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,8">
                            <TextBlock Text="Y" Foreground="LimeGreen" FontWeight="Bold"/>
                            <TextBlock Text="{Binding TcpPosition.Y, StringFormat={}{0:F2} mm}"
                                       Foreground="White" FontSize="18"/>
                        </StackPanel>
                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Z" Foreground="DodgerBlue" FontWeight="Bold"/>
                            <TextBlock Text="{Binding TcpPosition.Z, StringFormat={}{0:F2} mm}"
                                       Foreground="White" FontSize="18"/>
                        </StackPanel>

                        <!-- Orientation -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0,0,8">
                            <TextBlock Text="Roll" Foreground="#888888" FontWeight="Bold"/>
                            <TextBlock Text="{Binding TcpPosition.Roll, StringFormat={}{0:F2}째}"
                                       Foreground="White" FontSize="18"/>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,0,8">
                            <TextBlock Text="Pitch" Foreground="#888888" FontWeight="Bold"/>
                            <TextBlock Text="{Binding TcpPosition.Pitch, StringFormat={}{0:F2}째}"
                                       Foreground="White" FontSize="18"/>
                        </StackPanel>
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="Yaw" Foreground="#888888" FontWeight="Bold"/>
                            <TextBlock Text="{Binding TcpPosition.Yaw, StringFormat={}{0:F2}째}"
                                       Foreground="White" FontSize="18"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Right: Jog Controls -->
        <StackPanel Grid.Column="1">
            <controls:MotionControlPanel Margin="0,0,0,16"/>
            <controls:JogPanel/>
        </StackPanel>
    </Grid>
</UserControl>
