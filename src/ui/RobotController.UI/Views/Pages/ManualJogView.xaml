<UserControl x:Class="RobotController.UI.Views.Pages.ManualJogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:RobotController.UI.Views.Controls"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="Transparent">

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Position Display -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Joint Positions Large Display -->
            <Border Grid.Row="0" Background="#D8D8D8" CornerRadius="8" Padding="16" Margin="0,0,16,16">
                <StackPanel>
                    <TextBlock Text="JOINT POSITIONS" FontSize="14" FontWeight="Bold"
                               Foreground="#555555" Margin="0,0,0,12"/>

                    <ItemsControl ItemsSource="{Binding Joints}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{Binding Name}"
                                               Foreground="#666666" FontWeight="Bold"
                                               VerticalAlignment="Center"/>

                                    <ProgressBar Grid.Column="1"
                                                 Value="{Binding Position}"
                                                 Minimum="{Binding MinLimit}"
                                                 Maximum="{Binding MaxLimit}"
                                                 Height="12"
                                                 Background="#545454"
                                                 Foreground="#0078D7"/>

                                    <TextBlock Grid.Column="2"
                                               Text="{Binding Position, StringFormat={}{0:F2}째}"
                                               Foreground="#222222" FontSize="14" FontWeight="Bold"
                                               TextAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- TCP Position Display -->
            <Border Grid.Row="1" Background="#D8D8D8" CornerRadius="8" Padding="16" Margin="0,0,16,0">
                <StackPanel>
                    <TextBlock Text="TCP POSITION" FontSize="14" FontWeight="Bold"
                               Foreground="#555555" Margin="0,0,0,12"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Position -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,8">
                            <TextBlock Text="X" Foreground="Red" FontWeight="Bold"/>
                            <TextBlock Text="{Binding TcpPosition.X, StringFormat={}{0:F2} mm}"
                                       Foreground="#222222" FontSize="18"/>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,8">
                            <TextBlock Text="Y" Foreground="LimeGreen" FontWeight="Bold"/>
                            <TextBlock Text="{Binding TcpPosition.Y, StringFormat={}{0:F2} mm}"
                                       Foreground="#222222" FontSize="18"/>
                        </StackPanel>
                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Z" Foreground="DodgerBlue" FontWeight="Bold"/>
                            <TextBlock Text="{Binding TcpPosition.Z, StringFormat={}{0:F2} mm}"
                                       Foreground="#222222" FontSize="18"/>
                        </StackPanel>

                        <!-- Orientation -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0,0,8">
                            <TextBlock Text="Roll" Foreground="#666666" FontWeight="Bold"/>
                            <TextBlock Text="{Binding TcpPosition.Roll, StringFormat={}{0:F2}째}"
                                       Foreground="#222222" FontSize="18"/>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,0,8">
                            <TextBlock Text="Pitch" Foreground="#666666" FontWeight="Bold"/>
                            <TextBlock Text="{Binding TcpPosition.Pitch, StringFormat={}{0:F2}째}"
                                       Foreground="#222222" FontSize="18"/>
                        </StackPanel>
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="Yaw" Foreground="#666666" FontWeight="Bold"/>
                            <TextBlock Text="{Binding TcpPosition.Yaw, StringFormat={}{0:F2}째}"
                                       Foreground="#222222" FontSize="18"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Right: Jog Controls -->
        <StackPanel Grid.Column="1">
            <controls:MotionControlPanel Margin="0,0,0,16"/>
            <controls:JogPanel/>

            <!-- 3D Jog Controls -->
            <Border Background="#D8D8D8" CornerRadius="8" Padding="12" Margin="0,16,0,0">
                <StackPanel>
                    <TextBlock Text="3D JOG MODE" FontSize="12" FontWeight="Bold"
                               Foreground="#555555" Margin="0,0,0,8"/>

                    <!-- Enable toggle -->
                    <CheckBox Content="Enable 3D Gizmo"
                              IsChecked="{Binding Is3DJogEnabled}"
                              Foreground="#222222" Margin="0,0,0,8"/>

                    <!-- Frame selector -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8"
                                IsEnabled="{Binding Is3DJogEnabled}">
                        <TextBlock Text="Frame:" Foreground="#666666" VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <RadioButton Content="World" GroupName="GizmoFrame"
                                     IsChecked="{Binding IsGizmoWorldFrame}"
                                     Foreground="#222222" Margin="0,0,12,0"/>
                        <RadioButton Content="Tool" GroupName="GizmoFrame"
                                     IsChecked="{Binding IsGizmoWorldFrame, Converter={StaticResource InverseBool}}"
                                     Foreground="#222222"/>
                    </StackPanel>

                    <!-- Live mode -->
                    <CheckBox Content="Live Mode (move during drag)"
                              IsChecked="{Binding Is3DJogLiveMode}"
                              IsEnabled="{Binding Is3DJogEnabled}"
                              Foreground="#222222" Margin="0,0,0,8"/>

                    <!-- Drag status -->
                    <TextBlock Text="{Binding GizmoDragStatus}"
                               Foreground="#00FF88" FontSize="13" FontWeight="Bold"
                               Visibility="{Binding GizmoDragStatus, Converter={StaticResource StringToVisibilityConverter}}"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
