<UserControl x:Class="RobotController.UI.Views.Pages.DiagnosticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="Transparent">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="DIAGNOSTICS" FontSize="18" FontWeight="Bold" Foreground="#222222"/>
        </Grid>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Background" Value="#D8D8D8"/>
                    <Setter Property="Foreground" Value="#666666"/>
                    <Setter Property="Padding" Value="16,6"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="Border" Background="#D0D0D0" CornerRadius="6,6,0,0"
                                        Margin="0,0,2,0" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter x:Name="Content" ContentSource="Header"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#D8D8D8"/>
                                        <Setter Property="Foreground" Value="#222222"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#B8B8B8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- ============ TAB 1: System Log ============ -->
            <TabItem Header="System Log">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

                    <!-- Log Viewer -->
                    <Border Grid.Column="0" Background="#D8D8D8" CornerRadius="0,0,8,8" Margin="0,0,16,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Log Header -->
                            <Border Grid.Row="0" Background="#C8C8C8" Padding="12">
                                <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Clear Log" Width="80" Height="28" Margin="0,0,8,0"
                                                Command="{Binding ClearLogCommand}"/>
                                        <Button Content="Export" Width="80" Height="28"
                                                Command="{Binding ExportLogCommand}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock Text="Filter:" Foreground="#666666" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <ComboBox SelectedItem="{Binding LogFilter}" Width="100" Background="#FFFFFF">
                                            <ComboBoxItem Content="All"/>
                                            <ComboBoxItem Content="Error"/>
                                            <ComboBoxItem Content="Warning"/>
                                            <ComboBoxItem Content="Info"/>
                                            <ComboBoxItem Content="Debug"/>
                                        </ComboBox>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Log Content -->
                            <ListBox Grid.Row="1" ItemsSource="{Binding LogEntries}"
                                     Background="#FFFFFF" BorderThickness="0"
                                     FontFamily="Consolas" FontSize="12"
                                     ScrollViewer.HorizontalScrollBarVisibility="Auto">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss.fff}}"
                                                       Foreground="#666666"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Level}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#888888"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Level}" Value="ERROR">
                                                                <Setter Property="Foreground" Value="#FF6666"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Level}" Value="WARN">
                                                                <Setter Property="Foreground" Value="#FFAA00"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Level}" Value="INFO">
                                                                <Setter Property="Foreground" Value="#66AAFF"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Grid.Column="2" Text="{Binding Message}" Foreground="#333333"
                                                       TextWrapping="NoWrap"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="8,2"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>

                            <!-- Log Stats -->
                            <Border Grid.Row="2" Background="#C8C8C8" Padding="12">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Entries: " Foreground="#666666"/>
                                    <TextBlock Text="{Binding LogEntries.Count, FallbackValue=0, Mode=OneWay}" Foreground="#666666"/>
                                    <TextBlock Text=" | Errors: " Foreground="#666666"/>
                                    <TextBlock Text="{Binding ErrorCount, FallbackValue=0}" Foreground="#FF6666"/>
                                    <TextBlock Text=" | Warnings: " Foreground="#666666"/>
                                    <TextBlock Text="{Binding WarningCount, FallbackValue=0}" Foreground="#FFAA00"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- System Status -->
                    <StackPanel Grid.Column="1">
                        <!-- Core Status -->
                        <Border Background="#D8D8D8" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="CORE STATUS" FontWeight="Bold" Foreground="#555555" Margin="0,0,0,12"/>
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="Connection" Foreground="#666666"/>
                                    <TextBlock Text="{Binding CoreConnectionStatus, FallbackValue=Disconnected}"
                                               HorizontalAlignment="Right">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#FF6666"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                        <Setter Property="Foreground" Value="#66FF66"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="Version" Foreground="#666666"/>
                                    <TextBlock Text="{Binding CoreVersion, FallbackValue=N/A}"
                                               Foreground="#222222" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="Uptime" Foreground="#666666"/>
                                    <TextBlock Text="{Binding Uptime, FallbackValue=00:00:00}"
                                               Foreground="#222222" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="Cycle Time" Foreground="#666666"/>
                                    <TextBlock Text="{Binding CycleTime, FallbackValue=0.0 ms}"
                                               Foreground="#222222" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid>
                                    <TextBlock Text="CPU Usage" Foreground="#666666"/>
                                    <TextBlock Text="{Binding CpuUsage, FallbackValue=0%}"
                                               Foreground="#222222" HorizontalAlignment="Right"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Communication Stats -->
                        <Border Background="#D8D8D8" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="COMMUNICATION" FontWeight="Bold" Foreground="#555555" Margin="0,0,0,12"/>
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="Messages Sent" Foreground="#666666"/>
                                    <TextBlock Text="{Binding MessagesSent, FallbackValue=0}"
                                               Foreground="#222222" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="Messages Received" Foreground="#666666"/>
                                    <TextBlock Text="{Binding MessagesReceived, FallbackValue=0}"
                                               Foreground="#222222" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="Errors" Foreground="#666666"/>
                                    <TextBlock Text="{Binding CommErrors, FallbackValue=0}"
                                               Foreground="#FF6666" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid>
                                    <TextBlock Text="Latency" Foreground="#666666"/>
                                    <TextBlock Text="{Binding Latency, FallbackValue=0 ms}"
                                               Foreground="#222222" HorizontalAlignment="Right"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Quick Actions -->
                        <Border Background="#D8D8D8" CornerRadius="8" Padding="16">
                            <StackPanel>
                                <TextBlock Text="QUICK ACTIONS" FontWeight="Bold" Foreground="#555555" Margin="0,0,0,12"/>
                                <Button Content="Ping Core" Height="32" Margin="0,0,0,8"
                                        Command="{Binding PingCoreCommand}"/>
                                <Button Content="Request Status" Height="32" Margin="0,0,0,8"
                                        Command="{Binding RequestStatusCommand}"/>
                                <Button Content="Reset Statistics" Height="32" Margin="0,0,0,8"
                                        Command="{Binding ResetStatsCommand}"/>
                                <Button Content="Test E-Stop" Height="32" Background="#AA0000" Foreground="#222222"
                                        Command="{Binding TestEStopCommand}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- ============ TAB 2: UDP Packets ============ -->
            <TabItem Header="UDP Packets">
                <Border Background="#D8D8D8" CornerRadius="0,0,8,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Toolbar -->
                        <Border Grid.Row="0" Background="#C8C8C8" Padding="10">
                            <StackPanel Orientation="Horizontal">
                                <Button Width="90" Height="28" Margin="0,0,8,0"
                                        Command="{Binding ToggleCaptureCommand}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Content" Value="Stop"/>
                                            <Setter Property="Background" Value="#AA3333"/>
                                            <Setter Property="Foreground" Value="#222222"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsCapturing}" Value="False">
                                                    <Setter Property="Content" Value="Capture"/>
                                                    <Setter Property="Background" Value="#1B5E20"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Content="Clear" Width="70" Height="28" Margin="0,0,16,0"
                                        Command="{Binding ClearPacketsCommand}"/>
                                <TextBlock Text="Filter:" Foreground="#666666"
                                           VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <ComboBox Width="80" Height="28" Background="#FFFFFF"
                                          SelectedItem="{Binding PacketFilter}">
                                    <ComboBoxItem Content="All" IsSelected="True"/>
                                    <ComboBoxItem Content="TX"/>
                                    <ComboBoxItem Content="RX"/>
                                </ComboBox>
                                <TextBlock Foreground="#4EC9B0" VerticalAlignment="Center" Margin="20,0,0,0"
                                           FontFamily="Consolas" FontWeight="Bold">
                                    <Run Text="TX: "/><Run Text="{Binding TxCount, Mode=OneWay}"/>
                                </TextBlock>
                                <TextBlock Foreground="#B5CEA8" VerticalAlignment="Center" Margin="16,0,0,0"
                                           FontFamily="Consolas" FontWeight="Bold">
                                    <Run Text="RX: "/><Run Text="{Binding RxCount, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Packet List -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Column Headers -->
                            <Border Grid.Row="0" Background="#C8C8C8" Padding="8,4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="TIME" Foreground="#777777"
                                               FontFamily="Consolas" FontSize="11" FontWeight="Bold"/>
                                    <TextBlock Grid.Column="1" Text="DIR" Foreground="#777777"
                                               FontFamily="Consolas" FontSize="11" FontWeight="Bold"/>
                                    <TextBlock Grid.Column="2" Text="TYPE" Foreground="#777777"
                                               FontFamily="Consolas" FontSize="11" FontWeight="Bold"/>
                                    <TextBlock Grid.Column="3" Text="SEQ" Foreground="#777777"
                                               FontFamily="Consolas" FontSize="11" FontWeight="Bold"
                                               TextAlignment="Right"/>
                                    <TextBlock Grid.Column="4" Text="LEN" Foreground="#777777"
                                               FontFamily="Consolas" FontSize="11" FontWeight="Bold"
                                               TextAlignment="Right"/>
                                    <TextBlock Grid.Column="5" Text="PAYLOAD (HEX)" Foreground="#777777"
                                               FontFamily="Consolas" FontSize="11" FontWeight="Bold"
                                               Margin="8,0,0,0"/>
                                </Grid>
                            </Border>

                            <!-- Packet Data -->
                            <ListBox Grid.Row="1" ItemsSource="{Binding UdpPackets}"
                                     Background="#C0C0C0" BorderThickness="0"
                                     FontFamily="Consolas" FontSize="11"
                                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                     ScrollViewer.CanContentScroll="True"
                                     VirtualizingStackPanel.IsVirtualizing="True">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Time}" Foreground="#666666"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Dir}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#888888"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Dir}" Value="TX">
                                                                <Setter Property="Foreground" Value="#4EC9B0"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Dir}" Value="RX">
                                                                <Setter Property="Foreground" Value="#B5CEA8"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Grid.Column="2" Text="{Binding TypeName}" Foreground="#333333"
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="3" Text="{Binding Seq}" Foreground="#666666"
                                                       TextAlignment="Right"/>
                                            <TextBlock Grid.Column="4" Text="{Binding Len}" Foreground="#666666"
                                                       TextAlignment="Right"/>
                                            <TextBlock Grid.Column="5" Text="{Binding Hex}" Foreground="#CE9178"
                                                       Margin="8,0,0,0" TextWrapping="NoWrap"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="8,1"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#A0C0E8"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </Grid>

                        <!-- Status Bar -->
                        <Border Grid.Row="2" Background="#C8C8C8" Padding="10,6">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Foreground="#666666" FontFamily="Consolas" FontSize="11">
                                    <Run Text="Packets: "/>
                                    <Run Text="{Binding UdpPackets.Count, Mode=OneWay}" Foreground="#222222"/>
                                    <Run Text="  |  Capturing: "/>
                                </TextBlock>
                                <TextBlock FontFamily="Consolas" FontSize="11">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="OFF"/>
                                            <Setter Property="Foreground" Value="#FF6666"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsCapturing}" Value="True">
                                                    <Setter Property="Text" Value="ON"/>
                                                    <Setter Property="Foreground" Value="#66FF66"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
