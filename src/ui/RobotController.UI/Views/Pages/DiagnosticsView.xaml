<UserControl x:Class="RobotController.UI.Views.Pages.DiagnosticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="Transparent">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="DIAGNOSTICS" FontSize="18" FontWeight="Bold" Foreground="White"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Clear Log" Width="80" Height="28" Margin="0,0,8,0"
                        Command="{Binding ClearLogCommand}"/>
                <Button Content="Export" Width="80" Height="28"
                        Command="{Binding ExportLogCommand}"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Log Viewer -->
            <Border Grid.Column="0" Background="#4E4E4E" CornerRadius="8" Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Log Header -->
                    <Border Grid.Row="0" Background="#545454" CornerRadius="8,8,0,0" Padding="12">
                        <Grid>
                            <TextBlock Text="System Log" FontWeight="Bold" Foreground="#AAAAAA"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="Filter:" Foreground="#888888" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <ComboBox SelectedItem="{Binding LogFilter}" Width="100" Background="#363636">
                                    <ComboBoxItem Content="All"/>
                                    <ComboBoxItem Content="Error"/>
                                    <ComboBoxItem Content="Warning"/>
                                    <ComboBoxItem Content="Info"/>
                                    <ComboBoxItem Content="Debug"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Log Content -->
                    <ListBox Grid.Row="1" ItemsSource="{Binding LogEntries}"
                             Background="#363636" BorderThickness="0"
                             FontFamily="Consolas" FontSize="12"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss.fff}}"
                                               Foreground="#666666"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Level}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#888888"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Level}" Value="ERROR">
                                                        <Setter Property="Foreground" Value="#FF6666"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Level}" Value="WARN">
                                                        <Setter Property="Foreground" Value="#FFAA00"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Level}" Value="INFO">
                                                        <Setter Property="Foreground" Value="#66AAFF"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Grid.Column="2" Text="{Binding Message}" Foreground="#D4D4D4"
                                               TextWrapping="NoWrap"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="8,2"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <!-- Log Stats -->
                    <Border Grid.Row="2" Background="#545454" Padding="12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Entries: " Foreground="#888888"/>
                            <TextBlock Text="{Binding LogEntries.Count, FallbackValue=0, Mode=OneWay}" Foreground="#888888"/>
                            <TextBlock Text=" | Errors: " Foreground="#888888"/>
                            <TextBlock Text="{Binding ErrorCount, FallbackValue=0}" Foreground="#FF6666"/>
                            <TextBlock Text=" | Warnings: " Foreground="#888888"/>
                            <TextBlock Text="{Binding WarningCount, FallbackValue=0}" Foreground="#FFAA00"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- System Status -->
            <StackPanel Grid.Column="1">
                <!-- Core Status -->
                <Border Background="#4E4E4E" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="CORE STATUS" FontWeight="Bold" Foreground="#AAAAAA" Margin="0,0,0,12"/>

                        <Grid Margin="0,0,0,8">
                            <TextBlock Text="Connection" Foreground="#888888"/>
                            <TextBlock Text="{Binding CoreConnectionStatus, FallbackValue=Disconnected}"
                                       HorizontalAlignment="Right">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#FF6666"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                <Setter Property="Foreground" Value="#66FF66"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <Grid Margin="0,0,0,8">
                            <TextBlock Text="Version" Foreground="#888888"/>
                            <TextBlock Text="{Binding CoreVersion, FallbackValue=N/A}"
                                       Foreground="White" HorizontalAlignment="Right"/>
                        </Grid>

                        <Grid Margin="0,0,0,8">
                            <TextBlock Text="Uptime" Foreground="#888888"/>
                            <TextBlock Text="{Binding Uptime, FallbackValue=00:00:00}"
                                       Foreground="White" HorizontalAlignment="Right"/>
                        </Grid>

                        <Grid Margin="0,0,0,8">
                            <TextBlock Text="Cycle Time" Foreground="#888888"/>
                            <TextBlock Text="{Binding CycleTime, FallbackValue=0.0 ms}"
                                       Foreground="White" HorizontalAlignment="Right"/>
                        </Grid>

                        <Grid>
                            <TextBlock Text="CPU Usage" Foreground="#888888"/>
                            <TextBlock Text="{Binding CpuUsage, FallbackValue=0%}"
                                       Foreground="White" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Communication Stats -->
                <Border Background="#4E4E4E" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="COMMUNICATION" FontWeight="Bold" Foreground="#AAAAAA" Margin="0,0,0,12"/>

                        <Grid Margin="0,0,0,8">
                            <TextBlock Text="Messages Sent" Foreground="#888888"/>
                            <TextBlock Text="{Binding MessagesSent, FallbackValue=0}"
                                       Foreground="White" HorizontalAlignment="Right"/>
                        </Grid>

                        <Grid Margin="0,0,0,8">
                            <TextBlock Text="Messages Received" Foreground="#888888"/>
                            <TextBlock Text="{Binding MessagesReceived, FallbackValue=0}"
                                       Foreground="White" HorizontalAlignment="Right"/>
                        </Grid>

                        <Grid Margin="0,0,0,8">
                            <TextBlock Text="Errors" Foreground="#888888"/>
                            <TextBlock Text="{Binding CommErrors, FallbackValue=0}"
                                       Foreground="#FF6666" HorizontalAlignment="Right"/>
                        </Grid>

                        <Grid>
                            <TextBlock Text="Latency" Foreground="#888888"/>
                            <TextBlock Text="{Binding Latency, FallbackValue=0 ms}"
                                       Foreground="White" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Quick Actions -->
                <Border Background="#4E4E4E" CornerRadius="8" Padding="16">
                    <StackPanel>
                        <TextBlock Text="QUICK ACTIONS" FontWeight="Bold" Foreground="#AAAAAA" Margin="0,0,0,12"/>

                        <Button Content="Ping Core" Height="32" Margin="0,0,0,8"
                                Command="{Binding PingCoreCommand}"/>
                        <Button Content="Request Status" Height="32" Margin="0,0,0,8"
                                Command="{Binding RequestStatusCommand}"/>
                        <Button Content="Reset Statistics" Height="32" Margin="0,0,0,8"
                                Command="{Binding ResetStatsCommand}"/>
                        <Button Content="Test E-Stop" Height="32" Background="#AA0000" Foreground="White"
                                Command="{Binding TestEStopCommand}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
